{% stylesheet %}
.split-image-product {
  width: 100%;
}

.split-image-product__inner {
  display: flex;
  gap: 20px;
  align-items: center;
  flex-wrap: wrap;
  max-width: 150rem;
}
.split-image-product__media .kenburn-effect {
    overflow: hidden;
}
.split-image-product__media img {
  width: 100%;
  height: auto;
  display: block;
  animation: kenburn-slow 8s ease forwards;
}
.split-image-product__content .product-card__content {
  width: 100%;
}
.split-image-product__content .card-gallery {
    border-radius: 12px;
    overflow: hidden;
    margin-bottom: 20px;
            
}
.split-image-product__content .card-gallery img {
    width: 100%;
    height: auto;
    display: block;
    background: #c4c4c4;
    object-position: var(--focal-point, center center);
    overflow: hidden;
    transition: transform var(--hover-transition-duration) var(--hover-transition-timing);
}
.split-image-product__content .product-card__wrapper-link:hover .card-gallery img {
    transform: scale(var(--hover-subtle-zoom-amount));
}
.split-image-product__content .h4 {
    margin: 0;
}
.split-image-product__content .group-block-content__sb {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 0.25rem 0 1rem;
}
.split-image-product__content .product-tagline {
    opacity: 0.6;
}
.split-image-product__content .group-block-content__sb p {
    margin: 0;
}
.split-image-product__content .group-block-content {
    border-top: rgba(0, 0, 0, 0.4) 1px solid;
    width: 100%;
    margin-bottom: 2.5rem;
}
.split-image-product__content .layout-panel-flex--row {
    display: flex;
    padding: 9px 0 7px;
    border-bottom: rgba(0, 0, 0, 0.4) 1px solid;
}
.split-image-product__content .text-block--p-s {
    flex: 0 0 calc(50% - 1rem);
}
.split-image-product__content .text-block--p-s p {
    font-family: 'Graphik', sans-serif;
    font-size: 12px;
    line-height: 1;
}
.split-image-product__content .button-wrapper {
    width: fit-content;
}
.split-image-product__content .button-secondary {
  display: inline-flex;
  align-items: center;
}

@media screen and (max-width: 749px) {
    .split-image-product__inner {
        flex-direction: column;
        gap: 20px;
    }
    .split-image-product__media,
    .split-image-product__content {
        width: 100%;
    }
    .split-image-product__content .group-block-content {    
        margin-bottom: 2rem;
    }
}
@media (min-width: 990px) {
    .split-image-product__content {
        flex: 0 0 40% !important;
    }
}
{% endstylesheet %}

{% assign product = section.settings.product %}
{% if product %}
  {% assign product_obj = all_products[product] %}
{% endif %}

<div class="split-image-product color-{{ section.settings.color_scheme }}">
    <div class="split-image-product__inner" style="padding: {{ section.settings.padding_top }}px 20px {{ section.settings.padding_bottom }}px 20px;">
    <!-- LEFT SIDE IMAGE -->
        <div class="split-image-product__media" style="flex:1;" data-reveal>
            <div class="kenburn-effect">
                {% if section.settings.image %}
                    {{ section.settings.image | image_url: width: 2000 | image_tag: loading: 'lazy' }}
                {% else %}
                    {{ 'image' | placeholder_svg_tag }}
                {% endif %}
            </div>
        </div>

    <!-- RIGHT SIDE PRODUCT CARD -->
        <div class="split-image-product__content" style="flex:1;">

        {% if product_obj %}
        <a href="{{ product_obj.url }}" class="product-card__wrapper-link" style="text-decoration:none; color:inherit;">    
        <div class="
            product-card__content
            layout-panel-flex
            layout-panel-flex--column
            product-grid__card
            spacing-style
            border-style
            gap-style
        " style="
            --border-width: 1px; 
            --border-style: none; 
            --border-color: rgb(var(--color-border-rgb) / 1.0); 
            --border-radius: 0px;
            --flex-direction: column;
            --padding-block-end: 20px;
            --quick-add-display: none;
        ">

            <!-- FEATURED IMAGE -->
            {% if product_obj.featured_media %}
            <div class="card-gallery spacing-style border-style" data-reveal>
                {{ product_obj.featured_media 
                | image_url: width: 2000 
                | image_tag: loading: 'lazy' 
                }}
            </div>
            {% endif %}

            <!-- TITLE -->
            <h3 class="h4" data-reveal>{{ product_obj.title }}</h3>

            <div class="group-block-content__sb" data-reveal>
                <!-- TAGLINE METAFIELD -->
                {% if product_obj.metafields.custom.tagline %}
                    <p class="product-tagline">{{ product_obj.metafields.custom.tagline }}</p>
                {% else %}
                    <p class="product-tagline"></p>
                {% endif %}

                <!-- PRICE -->
                <div class="price--p">
                    {% render 'price', product: product_obj %}
                </div>
            </div>


            <div class="group-block-content" data-reveal>
                <!-- PRODUCT DETAILS (from metafields if present) -->
                {% if product_obj.metafields.custom.impact_resistance %}
                    <div class="layout-panel-flex--row">
                        <div class="text-block--p-s">
                            <p style="color: rgb(147,147,147);">Impact Resistance</p>
                        </div>
                        <div class="text-block--p-s">
                            <p>{{ product_obj.metafields.custom.impact_resistance }}</p>
                        </div>
                    </div>
                {% endif %}

                {% if product_obj.metafields.custom.weight %}
                    <div class="layout-panel-flex--row">
                        <div class="text-block--p-s">
                            <p style="color: rgb(147,147,147);">Weight</p>
                        </div>
                        <div class="text-block--p-s">
                            <p>{{ product_obj.metafields.custom.weight }}</p>
                        </div>
                    </div>
                {% endif %}
            </div>

            <!-- SHOP NOW BUTTON -->
            <div class="button-wrapper button-wrapper--button-secondary" data-reveal>
                <a href="{{ product_obj.url }}" 
                class="size-style button-secondary">
                Shop Now
                </a>
            </div>

        </div>
        </a>
        {% else %}
            <p>Select a product in the section settings.</p>
        {% endif %}
        </div>
    </div>
</div>

{% schema %}
{
  "name": "Split Image & Product",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Left image"
    },
    {
      "type": "product",
      "id": "product",
      "label": "Product"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top padding",
      "min": 0,
      "max": 150,
      "step": 5,
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom padding",
      "min": 0,
      "max": 150,
      "step": 5,
      "default": 40
    }
  ],
  "presets": [
    {
      "name": "Split Image & Product"
    }
  ]
}
{% endschema %}
