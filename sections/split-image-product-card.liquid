{% assign product = section.settings.product %}
{% if product %}
  {% assign product_obj = all_products[product] %}
{% endif %}

<div class="split-image-product color-{{ section.settings.color_scheme }}"
     style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
  
  <div class="split-image-product__inner" style="display:flex; gap:40px; align-items:center;">

    {%- comment -%} LEFT SIDE IMAGE {%- endcomment -%}
    <div class="split-image-product__media" style="flex:1;">
      {% if section.settings.image %}
        {{ section.settings.image | image_url: width: 2000 | image_tag: loading: 'lazy' }}
      {% else %}
        {{ 'image' | placeholder_svg_tag }}
      {% endif %}
    </div>

    {%- comment -%} RIGHT SIDE PRODUCT CARD (STATIC LAYOUT EXACTLY LIKE YOU WANT) {%- endcomment -%}
    <div class="split-image-product__content" style="flex:1;">

      {% if product_obj %}

        <!-- PRODUCT TITLE -->
        <h2 class="h3">{{ product_obj.title }}</h2>

        <!-- PRICE -->
        <div class="product-price">
          {% render 'price', product: product_obj %}
        </div>

        <!-- PRODUCT IMAGE -->
        {% if product_obj.featured_media %}
          <div class="product-featured-image" style="margin:20px 0;">
            {{ product_obj.featured_media
              | image_url: width: 2000
              | image_tag: loading: 'lazy'
            }}
          </div>
        {% endif %}

        <!-- IMPACT RESISTANCE (metafield) -->
        {% if product_obj.metafields.custom.impact_resistance %}
          <div class="product-spec-row" style="display:flex; justify-content:space-between; margin-bottom:10px;">
            <strong>Impact Resistance</strong>
            <span>{{ product_obj.metafields.custom.impact_resistance }}</span>
          </div>
        {% endif %}

        <!-- WEIGHT (metafield) -->
        {% if product_obj.metafields.custom.weight %}
          <div class="product-spec-row" style="display:flex; justify-content:space-between;">
            <strong>Weight</strong>
            <span>{{ product_obj.metafields.custom.weight }}</span>
          </div>
        {% endif %}

      {% else %}
        <p>Select a product in the section settings.</p>
      {% endif %}

    </div>

  </div>

</div>

{% schema %}
{
  "name": "Split Image & Product",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Left image"
    },
    {
      "type": "product",
      "id": "product",
      "label": "Product"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top padding",
      "min": 0,
      "max": 160,
      "step": 4,
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom padding",
      "min": 0,
      "max": 160,
      "step": 4,
      "default": 40
    }
  ],
  "presets": [
    {
      "name": "Split Image & Product"
    }
  ]
}
{% endschema %}
