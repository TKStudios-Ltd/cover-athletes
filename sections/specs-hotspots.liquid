<div class="specs-hotspots color-{{ section.settings.color_scheme }}">
  <div
    class="specs-hotspots__inner"
    style="
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    "
  >
    <div
      class="specs-hotspots__image-wrapper"
      style="max-width: {{ section.settings.image_max_width }}px;"
    >
      {% if section.settings.image %}
        {{ section.settings.image
          | image_url: width: 2400
          | image_tag: loading: 'lazy', class: 'specs-hotspots__image'
        }}
      {% endif %}

      {% for block in section.blocks %}
        <div
          class="specs-hotspot"
          style="
            left: {{ block.settings.pos_x }}%;
            top: {{ block.settings.pos_y }}%;
            --line-length: {{ block.settings.line_length }}px;
            --line-angle: {{ block.settings.angle }}deg;
          "
          {{ block.shopify_attributes }}
        >
          <span class="specs-hotspot__dot"></span>

          <div class="specs-hotspot__arm">
            <span class="specs-hotspot__line"></span>

            <div class="specs-hotspot__content">
              {% if block.settings.title != blank %}
                <h4>{{ block.settings.title }}</h4>
              {% endif %}
              {% if block.settings.text != blank %}
                <p>{{ block.settings.text }}</p>
              {% endif %}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% stylesheet %}
.specs-hotspots {
  width: 100%;
}

.specs-hotspots__image-wrapper {
  position: relative;
  margin: 0 auto;
}

.specs-hotspots__image {
  width: 100%;
  height: auto;
  display: block;
}

/* HOTSPOT */
.specs-hotspot {
  position: absolute;
  transform: translate(-50%, -50%);
  pointer-events: none;
}

/* DOT */
.specs-hotspot__dot {
  width: 14px;
  height: 14px;
  background: #5fbf92;
  border-radius: 50%;
  position: relative;
  z-index: 2;
}

.specs-hotspot__dot::after {
  content: '';
  position: absolute;
  inset: -6px;
  border: 1px solid rgba(95, 191, 146, 0.6);
  border-radius: 50%;
}

/* ARM (rotated wrapper for line + text) */
.specs-hotspot__arm {
  position: absolute;
  top: 50%;
  left: 50%;
  transform-origin: left center;
  transform: rotate(var(--line-angle));
  display: flex;
  align-items: center;
  pointer-events: none;
}

/* LINE */
.specs-hotspot__line {
  width: var(--line-length);
  height: 1px;
  background: rgba(0, 0, 0, 0.4);
}

/* CONTENT */
.specs-hotspot__content {
  margin-left: 12px;
  max-width: 260px;
  font-size: 14px;
  line-height: 1.4;
}

.specs-hotspot__content h4 {
  margin: 0 0 4px;
  font-size: 14px;
  font-weight: 600;
}

.specs-hotspot__content p {
  margin: 0;
  font-size: 13px;
  color: rgba(0, 0, 0, 0.7);
}
{% endstylesheet %}

{% schema %}
