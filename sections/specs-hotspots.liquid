{% stylesheet %}
/* =====================================================
   SPECS HOTSPOTS – BASE
===================================================== */

.specs-hotspots {
  position: relative;
  width: 100%;
}

.specs-hotspots__inner {
  max-width: var(--image-max-width, 1200px);
  margin: 0 auto;
  position: relative;
}

.specs-hotspots__image-wrapper {
  position: relative;
  width: 100%;
}

.specs-hotspots__image {
  width: 100%;
  height: auto;
  display: block;
}

/* =====================================================
   HOTSPOT ROOT
===================================================== */

.spec-hotspot {
  position: absolute;
  left: var(--x);
  top: var(--y);
  transform: translate(-50%, -50%);
  pointer-events: none;
}

/* =====================================================
   HOTSPOT DOT
===================================================== */

.spec-hotspot__dot {
  position: absolute;
  width: 14px;
  height: 14px;
  background-color: #5fd39b;
  border-radius: 50%;
  z-index: 3;
  box-shadow: 0 0 0 6px rgba(95, 211, 155, 0.28);
}

/* =====================================================
   HOTSPOT LINE
===================================================== */

.spec-hotspot__line {
  position: absolute;
  top: 7px;
  left: 7px;
  width: var(--line-length);
  height: 1px;
  background-color: #9a9a9a;
  transform-origin: left center;
  transform: rotate(var(--angle));
  z-index: 1;
}

/* =====================================================
   HOTSPOT CONTENT
===================================================== */

.spec-hotspot__content {
  position: absolute;
  max-width: 280px;
  font-size: 14px;
  line-height: 1.45;
  color: rgb(var(--color-foreground));
}

.spec-hotspot__content h4 {
  margin: 0 0 6px;
  font-size: 14px;
  font-weight: 600;
  letter-spacing: 0.02em;
}

.spec-hotspot__content p {
  margin: 0;
  font-size: 13px;
  line-height: 1.5;
}

/* =====================================================
   RIGHT SIDE (DEFAULT)
===================================================== */

.spec-hotspot--right .spec-hotspot__content {
  left: calc(var(--line-length) + 12px);
  top: calc(var(--line-length) * 0.25);
  text-align: left;
}

/* =====================================================
   LEFT SIDE (FLIPPED)
===================================================== */

.spec-hotspot--left .spec-hotspot__line {
  transform: rotate(calc(var(--angle) * -1));
}

.spec-hotspot--left .spec-hotspot__content {
  right: calc(var(--line-length) + 12px);
  top: calc(var(--line-length) * 0.25);
  text-align: right;
}

/* =====================================================
   RESPONSIVE
===================================================== */

@media screen and (max-width: 990px) {
  .spec-hotspot__content {
    max-width: 220px;
    font-size: 13px;
  }
}

@media screen and (max-width: 749px) {
  .spec-hotspot {
    display: none;
  }
}

{% endstylesheet %}

<div class="specs-hotspots color-{{ section.settings.color_scheme }}">
  <div
    class="specs-hotspots__inner"
    style="
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    "
  >
    <div
      class="specs-hotspots__image"
      style="max-width: {{ section.settings.image_max_width }}px;"
    >
      {% if section.settings.image %}
        {{ section.settings.image | image_url: width: 2400 | image_tag: loading: 'lazy' }}
      {% else %}
        {{ 'image' | placeholder_svg_tag }}
      {% endif %}

      {% for block in section.blocks %}
        <div
            class="spec-hotspot spec-hotspot--{{ block.settings.text_side }}"
            style="
                --x: {{ block.settings.x }}%;
                --y: {{ block.settings.y }}%;
                --angle: {{ block.settings.angle }}deg;
                --line-length: {{ block.settings.line_length }}px;
            "
            {{ block.shopify_attributes }}
            >
            <span class="spec-hotspot__dot"></span>
            <span class="spec-hotspot__line"></span>

            <div class="spec-hotspot__content">
                <h4>{{ block.settings.title }}</h4>
                <div class="rte">{{ block.settings.text }}</div>
            </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

