{% stylesheet %}
/* =====================================================
   WRAPPER
===================================================== */
.specs-hotspots {
  position: relative;
  width: 100%;
}

.specs-hotspots__inner {
  position: relative;
  margin: 0 auto;
  max-width: var(--image-max-width, 1200px);
}

.specs-hotspots__image-wrapper {
  position: relative;
  width: 100%;
}

.specs-hotspots__image-wrapper img {
  width: 100%;
  height: auto;
  display: block;
}

/* =====================================================
   HOTSPOT ROOT
===================================================== */
.spec-hotspot {
  position: absolute;
  left: var(--x);
  top: var(--y);
  transform: translate(-50%, -50%);
  pointer-events: none;
}

/* =====================================================
   DOT
===================================================== */
.spec-hotspot__dot {
  width: 14px;
  height: 14px;
  background: #5fd39b;
  border-radius: 50%;
  box-shadow: 0 0 0 6px rgba(95, 211, 155, 0.28);
  position: relative;
  z-index: 3;
}

/* =====================================================
   ARM – STARTS AT DOT CENTRE
===================================================== */
.spec-hotspot__arm {
  position: absolute;
  top: 7px;   /* centre of 14px dot */
  left: 7px;  /* centre of 14px dot */
  width: var(--line-length);
  height: 1px;
  background: #9a9a9a;
  transform-origin: left center;
}

/* =====================================================
   TEXT – ALWAYS FLAT
===================================================== */
.spec-hotspot__content {
  position: absolute;
  top: 7px;
  left: 7px;
  transform-origin: left center;
  max-width: 260px;
  font-size: 13px;
  color: rgb(var(--color-foreground));
  text-align: left; /* always left, design-style */
}

.spec-hotspot__content h4 {
  margin: 0 0 6px;
  font-size: 14px;
  font-weight: 600;
  letter-spacing: 0.02em;
}

.spec-hotspot__content p {
  margin: 0;
  line-height: 1.45;
}

/* =====================================================
   RIGHT SIDE (DEFAULT)
   - Line rotates by +angle
   - Text moves along line, then rotates back
===================================================== */
.spec-hotspot--right .spec-hotspot__arm {
  transform: rotate(var(--angle));
}

.spec-hotspot--right .spec-hotspot__content {
  transform:
    rotate(var(--angle))
    translateX(var(--line-length))
    rotate(calc(var(--angle) * -1));
  margin-left: 12px;
}

/* =====================================================
   LEFT SIDE (MIRRORED)
   - Line rotates by -angle
   - Text moves along line, then rotates back
   - Box ends up on the left side of the dot
===================================================== */
.spec-hotspot--left .spec-hotspot__arm {
  transform: rotate(calc(var(--angle) * -1));
}

.spec-hotspot--left .spec-hotspot__content {
  transform-origin: right center;
  transform:
    rotate(calc(var(--angle) * -1))
    translateX(var(--line-length))
    rotate(var(--angle));
  margin-right: 12px;
}

/* =====================================================
   RESPONSIVE – HIDE HOTSPOTS ON SMALL SCREENS
===================================================== */
@media (max-width: 749px) {
  .spec-hotspot {
    display: none;
  }
}
{% endstylesheet %}

<div class="specs-hotspots color-{{ section.settings.color_scheme }}">
  <div class="specs-hotspots__inner"
       style="padding-top: {{ section.settings.padding_top }}px;
              padding-bottom: {{ section.settings.padding_bottom }}px;
              --image-max-width: {{ section.settings.image_max_width }}px;">
    <div class="specs-hotspots__image-wrapper">
      {% if section.settings.image %}
        {{ section.settings.image | image_url: width: 2400 | image_tag }}
      {% else %}
        {{ 'image' | placeholder_svg_tag }}
      {% endif %}

      {% for block in section.blocks %}
        <div
          class="spec-hotspot spec-hotspot--{{ block.settings.text_side }}"
          style="
            --x: {{ block.settings.pos_x }}%;
            --y: {{ block.settings.pos_y }}%;
            --angle: {{ block.settings.angle }}deg;
            --line-length: {{ block.settings.line_length }}px;
          "
          {{ block.shopify_attributes }}
        >
          <div class="spec-hotspot__dot"></div>
          <div class="spec-hotspot__arm"></div>
          <div class="spec-hotspot__content">
            <h4>{{ block.settings.title }}</h4>
            <div class="rte">{{ block.settings.text }}</div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

