{% comment %}
  Hotspots Section (Simplified Placement Mode)
  - Uses pos_x and pos_y for dot position
  - Uses placement option (top left, center right, etc) to set text alignment
{% endcomment %}

{% stylesheet %}
.specs-hotspot-wrapper {
  max-width: 1200px;
  margin: 0 auto;
  position: relative;
  overflow: hidden;
  padding: 4rem 1rem;
}

.specs-hotspot-image {
  position: relative;
  width: 100%;
}

.specs-hotspot-image img {
  width: 100%;
  height: auto;
  display: block;
}

.spec-hotspot {
  position: absolute;
  left: var(--x);
  top: var(--y);
  transform: translate(-50%, -50%);
  pointer-events: none;
}

.spec-hotspot__dot {
  width: 14px;
  height: 14px;
  background: #5fd39b;
  border-radius: 50%;
  box-shadow: 0 0 0 6px rgba(95, 211, 155, 0.28);
  position: relative;
  z-index: 3;
}

.spec-hotspot__content {
  position: absolute;
  max-width: 200px;
  background: #fff;
  color: #000;
  padding: 1rem;
  border-radius: 4px;
  box-shadow: 0 0 12px rgba(0, 0, 0, 0.08);
  font-size: 14px;
  pointer-events: auto;
  z-index: 2;
}

/* Placement rules */
.placement-top-left {
  transform: translate(-100%, -100%);
  text-align: left;
}

.placement-top-center {
  transform: translate(-50%, -100%);
  text-align: center;
}

.placement-top-right {
  transform: translate(0, -100%);
  text-align: right;
}

.placement-middle-left {
  transform: translate(-100%, -50%);
  text-align: left;
}

.placement-middle-right {
  transform: translate(0, -50%);
  text-align: right;
}

.placement-bottom-left {
  transform: translate(-100%, 0%);
  text-align: left;
}

.placement-bottom-center {
  transform: translate(-50%, 0%);
  text-align: center;
}

.placement-bottom-right {
  transform: translate(0, 0%);
  text-align: right;
}

{% endstylesheet %}

<div class="specs-hotspot-wrapper page-width">
  {% if section.settings.image %}
    <div class="specs-hotspot-image">
      <img src="{{ section.settings.image | img_url: 'master' }}" alt="{{ section.settings.alt_text }}" />
    </div>
  {% endif %}

  {% for block in section.blocks %}
    {% assign x = block.settings.pos_x | append: '%' %}
    {% assign y = block.settings.pos_y | append: '%' %}
    <div
      class="spec-hotspot"
      style="--x: {{ x }}; --y: {{ y }};"
    >
      <div class="spec-hotspot__dot"></div>
      <div class="spec-hotspot__content placement-{{ block.settings.placement }}">
        {% if block.settings.title != blank %}
          <div class="spec-hotspot__title">{{ block.settings.title }}</div>
        {% endif %}
        {% if block.settings.text != blank %}
          <div class="spec-hotspot__text">{{ block.settings.text }}</div>
        {% endif %}
      </div>
    </div>
  {% endfor %}
</div>

{% schema %}
{
  "name": "Map Hotspots",
  "tag": "section",
  "class": "specs-hotspot-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background image"
    },
    {
      "type": "text",
      "id": "alt_text",
      "label": "Image alt text",
      "default": "Map"
    }
  ],
  "blocks": [
    {
      "type": "hotspot_item",
      "name": "Hotspot",
      "settings": [
        {
          "type": "range",
          "id": "pos_x",
          "label": "Position X (%)",
          "min": 0,
          "max": 100,
          "step": 1,
          "default": 50
        },
        {
          "type": "range",
          "id": "pos_y",
          "label": "Position Y (%)",
          "min": 0,
          "max": 100,
          "step": 1,
          "default": 50
        },
        {
          "type": "select",
          "id": "placement",
          "label": "Text Placement",
          "options": [
            { "value": "top-left", "label": "Top Left" },
            { "value": "top-center", "label": "Top Center" },
            { "value": "top-right", "label": "Top Right" },
            { "value": "middle-left", "label": "Middle Left" },
            { "value": "middle-right", "label": "Middle Right" },
            { "value": "bottom-left", "label": "Bottom Left" },
            { "value": "bottom-center", "label": "Bottom Center" },
            { "value": "bottom-right", "label": "Bottom Right" }
          ],
          "default": "top-left"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Map Hotspots",
      "blocks": []
    }
  ]
}
{% endschema %}
