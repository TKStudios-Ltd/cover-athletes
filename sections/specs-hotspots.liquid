{% stylesheet %}
/* ===============================
   SECTION WRAPPER
================================ */

.section-map-hotspots {
  position: relative;
  padding: 60px 0;
}

.section-map-hotspots .hotspots-wrapper {
  position: relative;
  margin: 0 auto;
  max-width: 1200px;
}

/* ===============================
   BACKGROUND IMAGE
================================ */

.section-map-hotspots .hotspot-image {
  width: 100%;
  height: auto;
  display: block;
  margin: auto;
}

/* ===============================
   HOTSPOT OVERLAY
   (fills wrapper, children use %)
================================ */

.section-map-hotspots .spec-hotspot {
  position: absolute;
  inset: 0;
  pointer-events: none;
}

/* DOT */

.section-map-hotspots .spec-hotspot__dot {
  position: absolute;
  width: 16px;
  height: 16px;
  background: #FFFFFF;
  border-radius: 50%;
  border: 3px solid #58D5A0;
  transform: translate(-50%, -50%);
  z-index: 2;
}

.section-map-hotspots .spec-hotspot__dot::after {
  {% if section.settings.show_outline %}
  content: '';
  position: absolute;
  inset: -8px;
  border-radius: 50%;
  border: 5px solid rgba(56, 248, 168, 0.5);
  {% endif %}
}

/* LINE: always horizontal from dot to rail edge */

.section-map-hotspots .spec-hotspot__line {
  position: absolute;
  height: 1px;
  background: #898989;
  z-index: 1;
}

/* TEXT BOX */

.section-map-hotspots .spec-hotspot__content {
    position: absolute;
    width: 300px;
    background: rgba(255, 255, 255, 0.5);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    padding: 1.5rem;
    border-radius: 10px;
    z-index: 3;
}

.section-map-hotspots .spec-hotspot__content h4 {
  margin: 0 0 8px;
  font-size: 14px;
  line-height: 1.2;
  max-width: 200px;
}

.section-map-hotspots .spec-hotspot__content p {
  margin: 0;
  font-family: 'Graphik', san-serif;
  font-weight: 300;
  font-size: 14px;
  line-height: 1.5;
}

/* SIDE RAILS: LEFT / RIGHT */

.section-map-hotspots .spec-hotspot--left  .spec-hotspot__content { left: 0;  text-align: left; }
.section-map-hotspots .spec-hotspot--right .spec-hotspot__content { right: 0; text-align: left; }

/* LINE TO EDGE */

.section-map-hotspots .spec-hotspot--right .spec-hotspot__line {
  left: var(--x);
  right: 0;
  top: var(--y);
}

.section-map-hotspots .spec-hotspot--left .spec-hotspot__line {
  left: 0;
  right: calc(100% - var(--x));
  top: var(--y);
}

/* DOT POSITION */

.section-map-hotspots .spec-hotspot__dot {
  left: var(--x);
  top: var(--y);
}

/* VERTICAL PLACEMENT */

.section-map-hotspots .spec-hotspot--top .spec-hotspot__content {
  top: var(--y);
  transform: translateY(-100%);
}

.section-map-hotspots .spec-hotspot--middle .spec-hotspot__content {
  top: var(--y);
  transform: translateY(-50%);
}

.section-map-hotspots .spec-hotspot--bottom .spec-hotspot__content {
  top: var(--y);
  transform: translateY(1px);
}

@media (min-width: 750px) {
    .map-hotspots-mobile {
        display: none;
    }
}

/* ===============================
   MOBILE HOTSPOTS (<750px)
================================ */

@media (max-width: 749px) {
  .section-map-hotspots .spec-hotspot__content,
  .section-map-hotspots .spec-hotspot__line {
    display: none;
  }
  .section-map-hotspots {
    padding: 0 0 60px;
  }
  .section-map-hotspots .spec-hotspot {
    pointer-events: auto;
    cursor: pointer;
  }
  .map-hotspots-mobile {
    margin-top: -20px;
    padding: 0 16px;
  }
  .map-hotspots-mobile__item {
    display: none;
    background: rgba(255, 255, 255, 0.6);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    padding: 16px;
    margin-bottom: 12px;
  }
  .map-hotspots-mobile__item.active {
    display: block;
  }
  .map-hotspots-mobile__item h4 {
    margin: 0 0 8px;
    font-size: 14px;
  }
  .map-hotspots-mobile__item p {
    margin: 0;
    font-size: 14px;
    line-height: 1.5;
  }
  .section-map-hotspots .spec-hotspot.is-active .spec-hotspot__dot {
    background: #58D5A0;
  }
}

{% endstylesheet %}

<div class="section-map-hotspots color-{{ section.settings.color_scheme }}">
  <div
    class="hotspots-wrapper"
  >
    {% if section.settings.background_image != blank %}
      <img
        src="{{ section.settings.background_image | img_url: '2400x' }}"
        class="hotspot-image"
        alt="{{ section.settings.background_image.alt | escape }}"
        style="max-width: {{ section.settings.image_max_width }}px;"
      >
    {% else %}
      {{ 'image' | placeholder_svg_tag }}
    {% endif %}

    {% for block in section.blocks %}
      {%- assign x_val = block.settings.pos_x | append: '%' -%}
      {%- assign y_val = block.settings.pos_y | append: '%' -%}

      {%- assign side = 'right' -%}
      {%- if block.settings.placement contains 'left' -%}
        {%- assign side = 'left' -%}
      {%- endif -%}

      {%- assign vertical = 'middle' -%}
      {%- if block.settings.placement contains 'top' -%}
        {%- assign vertical = 'top' -%}
      {%- elsif block.settings.placement contains 'bottom' -%}
        {%- assign vertical = 'bottom' -%}
      {%- endif -%}

      <div
        class="spec-hotspot spec-hotspot--{{ side }} spec-hotspot--{{ vertical }}"
        style="--x: {{ x_val }}; --y: {{ y_val }};"
        {{ block.shopify_attributes }}
      >
        <span class="spec-hotspot__dot"></span>
        <span class="spec-hotspot__line"></span>

        <div class="spec-hotspot__content">
          {% if block.settings.title != blank %}
            <h4>{{ block.settings.title }}</h4>
          {% endif %}
          {% if block.settings.text != blank %}
            <p>{{ block.settings.text }}</p>
          {% endif %}
        </div>
      </div>
    {% endfor %}
  </div>
  <div class="map-hotspots-mobile">
    {% for block in section.blocks %}
        <div
        class="map-hotspots-mobile__item"
        data-hotspot-index="{{ forloop.index0 }}"
        >
        {% if block.settings.title != blank %}
            <h4>{{ block.settings.title }}</h4>
        {% endif %}
        {% if block.settings.text != blank %}
            <p>{{ block.settings.text }}</p>
        {% endif %}
        </div>
    {% endfor %}
  </div>
</div>

<script>
(function () {
  const mobileQuery = window.matchMedia('(max-width: 749px)');
  const section = document.querySelector('.section-map-hotspots');
  if (!section) return;
  const hotspots = section.querySelectorAll('.spec-hotspot');
  const items = section.querySelectorAll('.map-hotspots-mobile__item');
  if (!hotspots.length || !items.length) return;
  function activate(index) {
    hotspots.forEach(h => h.classList.remove('is-active'));
    items.forEach(i => i.classList.remove('active'));
    hotspots[index]?.classList.add('is-active');
    items[index]?.classList.add('active');
  }
  function bind() {
    if (!mobileQuery.matches) return;
    activate(0);
    hotspots.forEach((hotspot, index) => {
      hotspot.addEventListener('click', () => {
        activate(index);
      });
    });
  }
  bind();
})();
</script>



{% schema %}
{
  "name": "Map Hotspots",
  "tag": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image"
    },
    {
      "type": "range",
      "id": "image_max_width",
      "label": "Background image max width",
      "min": 400,
      "max": 1200,
      "step": 100,
      "unit": "px",
      "default": 600
    },
    {
      "type": "checkbox",
      "id": "show_outline",
      "label": "Show hotspot outline",
      "default": true
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    }
  ],
  "blocks": [
    {
      "type": "hotspot",
      "name": "Hotspot",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Hotspot title"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text",
          "default": "Hotspot description text goes here."
        },
        {
          "type": "range",
          "id": "pos_x",
          "label": "Horizontal position (%)",
          "min": 0,
          "max": 100,
          "step": 1,
          "default": 50
        },
        {
          "type": "range",
          "id": "pos_y",
          "label": "Vertical position (%)",
          "min": 0,
          "max": 100,
          "step": 1,
          "default": 50
        },
        {
          "type": "select",
          "id": "placement",
          "label": "Textbox placement",
          "options": [
            { "value": "top-left", "label": "Top left rail" },
            { "value": "middle-left", "label": "Middle left rail" },
            { "value": "bottom-left", "label": "Bottom left rail" },
            { "value": "top-right", "label": "Top right rail" },
            { "value": "middle-right", "label": "Middle right rail" },
            { "value": "bottom-right", "label": "Bottom right rail" }
          ],
          "default": "top-right"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Map Hotspots",
      "blocks": [
        { "type": "hotspot" },
        { "type": "hotspot" },
        { "type": "hotspot" }
      ]
    }
  ]
}
{% endschema %}
