{% stylesheet %}
/* ===============================
   WRAPPER
=============================== */
.specs-hotspots {
  position: relative;
  width: 100%;
}

.specs-hotspots__inner {
  position: relative;
  margin: 0 auto;
}

.specs-hotspots__image {
  position: relative;
  margin: 0 auto;
}

.specs-hotspots__image img {
  width: 100%;
  height: auto;
  display: block;
}

/* ===============================
   TEXT RAILS
=============================== */
.specs-hotspots__rail {
  position: absolute;
  top: 0;
  bottom: 0;
  width: 320px;
  display: flex;
  flex-direction: column;
  gap: 32px;
  pointer-events: none;
}

.specs-hotspots__rail--left {
  left: -340px;
  text-align: right;
  align-items: flex-end;
}

.specs-hotspots__rail--right {
  right: -340px;
  text-align: left;
  align-items: flex-start;
}

/* ===============================
   HOTSPOT ROOT
=============================== */
.specs-hotspot {
  position: absolute;
  transform: translate(-50%, -50%);
  pointer-events: none;
}

/* ===============================
   DOT
=============================== */
.specs-hotspot__dot {
  width: 14px;
  height: 14px;
  background: #5fbf92;
  border-radius: 50%;
  position: relative;
  z-index: 2;
}

.specs-hotspot__dot::after {
  content: '';
  position: absolute;
  inset: -6px;
  border: 1px solid rgba(95, 191, 146, 0.6);
  border-radius: 50%;
}

/* ===============================
   LINE
=============================== */
.specs-hotspot__line {
  position: absolute;
  top: 50%;
  height: 1px;
  background: rgba(0,0,0,0.45);
}

/* RIGHT */
.specs-hotspot--right .specs-hotspot__line {
  left: 50%;
  width: calc(100% + 340px);
  transform-origin: left center;
  transform: translateY(-50%) rotate(var(--angle));
}

/* LEFT */
.specs-hotspot--left .specs-hotspot__line {
  right: 50%;
  width: calc(100% + 340px);
  transform-origin: right center;
  transform: translateY(-50%) rotate(calc(var(--angle) * -1));
}

/* ===============================
   CONTENT
=============================== */
.specs-hotspot__content {
  max-width: 280px;
}

.specs-hotspot__content h4 {
  margin: 0 0 6px;
  font-size: 16px;
  font-weight: 600;
}

.specs-hotspot__content p {
  margin: 0;
  font-size: 14px;
  line-height: 1.5;
  opacity: 0.75;
}

/* ===============================
   MOBILE
=============================== */
@media (max-width: 749px) {
  .specs-hotspot,
  .specs-hotspots__rail {
    display: none;
  }
}
{% endstylesheet %}


<div class="specs-hotspots color-{{ section.settings.color_scheme }}">
  <div
    class="specs-hotspots__inner"
    style="
      max-width: {{ section.settings.image_max_width }}px;
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    "
  >

    <!-- LEFT RAIL -->
    <div class="specs-hotspots__rail specs-hotspots__rail--left">
      {% for block in section.blocks %}
        {% if block.settings.text_side == 'left' %}
          <div class="specs-hotspot__content">
            <h4>{{ block.settings.title }}</h4>
            <p>{{ block.settings.text }}</p>
          </div>
        {% endif %}
      {% endfor %}
    </div>

    <!-- IMAGE -->
    <div class="specs-hotspots__image">
      {{ section.settings.image | image_url: width: 2400 | image_tag: loading: 'lazy' }}

      {% for block in section.blocks %}
        <div
          class="specs-hotspot specs-hotspot--{{ block.settings.text_side }}"
          style="
            left: {{ block.settings.pos_x }}%;
            top: {{ block.settings.pos_y }}%;
            --angle: {{ block.settings.angle }}deg;
          "
          {{ block.shopify_attributes }}
        >
          <span class="specs-hotspot__dot"></span>
          <span class="specs-hotspot__line"></span>
        </div>
      {% endfor %}
    </div>

    <!-- RIGHT RAIL -->
    <div class="specs-hotspots__rail specs-hotspots__rail--right">
      {% for block in section.blocks %}
        {% if block.settings.text_side == 'right' %}
          <div class="specs-hotspot__content">
            <h4>{{ block.settings.title }}</h4>
            <p>{{ block.settings.text }}</p>
          </div>
        {% endif %}
      {% endfor %}
    </div>

  </div>
</div>


