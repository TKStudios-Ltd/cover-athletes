{% stylesheet %}
.specs-hotspots {
  width: 100%;
}

.specs-hotspots__inner {
  position: relative;
  max-width: 1200px;
  margin: 0 auto;
}

.specs-hotspots__image {
  position: relative;
}

.specs-hotspots__image img {
  width: 100%;
  display: block;
}

/* HOTSPOT ROOT */
.specs-hotspot {
  position: absolute;
  pointer-events: none;
}

/* DOT */
.specs-hotspot__dot {
  width: 14px;
  height: 14px;
  background: #5fbf92;
  border-radius: 50%;
  position: absolute;
  transform: translate(-50%, -50%);
  z-index: 2;
}

.specs-hotspot__dot::after {
  content: '';
  position: absolute;
  inset: -6px;
  border: 1px solid rgba(95,191,146,.6);
  border-radius: 50%;
}

/* LINE */
.specs-hotspot__line {
  position: absolute;
  height: 1px;
  background: rgba(0,0,0,.45);
  transform-origin: left center;
}

/* TEXT */
.specs-hotspot__content {
  position: absolute;
  max-width: 280px;
}

.specs-hotspot__content h4 {
  margin: 0 0 6px;
  font-size: 16px;
  font-weight: 600;
}

.specs-hotspot__content p {
  margin: 0;
  font-size: 14px;
  line-height: 1.5;
  opacity: .75;
}

@media (max-width: 749px) {
  .specs-hotspot {
    display: none;
  }
}
{% endstylesheet %}

<div class="specs-hotspots color-{{ section.settings.color_scheme }}">
  <div
    id="SpecsHotspotsInner-{{ section.id }}"
    class="specs-hotspots__inner"
    style="padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;"
  >
    <div class="specs-hotspots__image">
      {{ section.settings.image | image_url: width: 2400 | image_tag }}

      {% for block in section.blocks %}
        <div
          class="specs-hotspot"
          data-x="{{ block.settings.pos_x }}"
          data-y="{{ block.settings.pos_y }}"
          data-angle="{{ block.settings.angle }}"
          data-side="{{ block.settings.text_side }}"
        >
          <span class="specs-hotspot__dot"></span>
          <span class="specs-hotspot__line"></span>
          <div class="specs-hotspot__content">
            <h4>{{ block.settings.title }}</h4>
            <p>{{ block.settings.text }}</p>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', () => {
  document.querySelectorAll('.specs-hotspots').forEach(section => {
    const inner = section.querySelector('.specs-hotspots__inner');
    const image = section.querySelector('.specs-hotspots__image');

    const innerRect = inner.getBoundingClientRect();
    const imageRect = image.getBoundingClientRect();

    section.querySelectorAll('.specs-hotspot').forEach(h => {
      const dot = h.querySelector('.specs-hotspot__dot');
      const line = h.querySelector('.specs-hotspot__line');
      const content = h.querySelector('.specs-hotspot__content');

      const x = parseFloat(h.dataset.x) / 100;
      const y = parseFloat(h.dataset.y) / 100;
      const angle = parseFloat(h.dataset.angle);
      const side = h.dataset.side;

      const dotX = imageRect.left + imageRect.width * x;
      const dotY = imageRect.top + imageRect.height * y;

      const targetX = side === 'right'
        ? innerRect.right
        : innerRect.left;

      const rad = angle * Math.PI / 180;
      const dx = Math.cos(rad);
      const dy = Math.sin(rad);

      const t = (targetX - dotX) / dx;
      const targetY = dotY + t * dy;

      const length = Math.abs(t);

      h.style.left = `${dotX - innerRect.left}px`;
      h.style.top = `${dotY - innerRect.top}px`;

      dot.style.left = '0';
      dot.style.top = '0';

      line.style.width = `${length}px`;
      line.style.left = '0';
      line.style.top = '0';
      line.style.transform = `rotate(${angle}deg)`;

      content.style.top = `${targetY - innerRect.top}px`;

      if (side === 'right') {
        content.style.left = `${innerRect.width}px`;
        content.style.transform = 'translate(-100%, -50%)';
        content.style.textAlign = 'left';
      } else {
        content.style.left = `0`;
        content.style.transform = 'translate(0, -50%)';
        content.style.textAlign = 'right';
      }
    });
  });
});
</script>

