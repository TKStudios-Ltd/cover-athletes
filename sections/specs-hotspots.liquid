{% stylesheet %}

/* ================================
   SECTION
================================ */

.specs-hotspots {
  width: 100%;
}

.specs-hotspots__inner {
  position: relative;
  max-width: 1200px;
  margin: 0 auto;
}

/* ================================
   IMAGE
================================ */

.specs-hotspots__image {
  position: relative;
}

.specs-hotspots__image img {
  width: 100%;
  height: auto;
  display: block;
}

/* ================================
   HOTSPOT ROOT
================================ */

.specs-hotspot {
  position: absolute;
  pointer-events: none;
}

/* ================================
   DOT
================================ */

.specs-hotspot__dot {
  width: 14px;
  height: 14px;
  background: #5fbf92;
  border-radius: 50%;
  position: absolute;
  transform: translate(-50%, -50%);
}

.specs-hotspot__dot::after {
  content: '';
  position: absolute;
  inset: -6px;
  border: 1px solid rgba(95,191,146,.6);
  border-radius: 50%;
}

/* ================================
   LINE
================================ */

.specs-hotspot__line {
  position: absolute;
  top: 0;
  height: 1px;
  background: rgba(0,0,0,.45);
}

/* ================================
   TEXT
================================ */

.specs-hotspot__content {
  position: absolute;
  max-width: 280px;
}

.specs-hotspot__content h4 {
  margin: 0 0 6px;
  font-size: 16px;
  font-weight: 600;
}

.specs-hotspot__content p {
  margin: 0;
  font-size: 14px;
  line-height: 1.5;
  opacity: .75;
}

/* ================================
   RIGHT SIDE
================================ */

.specs-hotspot--right {
  left: calc(var(--x) * 1%);
  top: calc(var(--y) * 1%);
}

.specs-hotspot--right .specs-hotspot__line {
  left: 7px;
  width: calc(100% - var(--x) * 1%);
}

.specs-hotspot--right .specs-hotspot__content {
  left: calc(100% + 14px);
  top: 0;
  transform: translateY(-50%);
  text-align: left;
}

/* ================================
   LEFT SIDE
================================ */

.specs-hotspot--left {
  left: calc(var(--x) * 1%);
  top: calc(var(--y) * 1%);
}

.specs-hotspot--left .specs-hotspot__line {
  right: 7px;
  width: calc(var(--x) * 1%);
}

.specs-hotspot--left .specs-hotspot__content {
  right: calc(100% + 14px);
  top: 0;
  transform: translateY(-50%);
  text-align: right;
}

/* ================================
   MOBILE
================================ */

@media (max-width: 749px) {
  .specs-hotspot {
    display: none;
  }
}

{% endstylesheet %}


<div class="specs-hotspots color-{{ section.settings.color_scheme }}">
  <div
    class="specs-hotspots__inner"
    style="padding: {{ section.settings.padding_top }}px {{ section.settings.padding_bottom }}px;"
  >
    <div class="specs-hotspots__image">
      {{ section.settings.image | image_url: width: 2400 | image_tag }}

      {% for block in section.blocks %}
        <div
          class="specs-hotspot specs-hotspot--{{ block.settings.text_side }}"
          style="
            --x: {{ block.settings.pos_x }};
            --y: {{ block.settings.pos_y }};
          "
          {{ block.shopify_attributes }}
        >
          <span class="specs-hotspot__dot"></span>
          <span class="specs-hotspot__line"></span>

          <div class="specs-hotspot__content">
            <h4>{{ block.settings.title }}</h4>
            <p>{{ block.settings.text }}</p>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>


{% schema %}
{
  "name": "Specs Hotspots",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background image"
    },
    {
      "type": "range",
      "id": "image_max_width",
      "label": "Section max width",
      "min": 800,
      "max": 1600,
      "step": 50,
      "unit": "px",
      "default": 1200
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top padding",
      "min": 0,
      "max": 200,
      "step": 10,
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom padding",
      "min": 0,
      "max": 200,
      "step": 10,
      "default": 40
    }
  ],
  "blocks": [
    {
      "type": "hotspot",
      "name": "Hotspot",
      "settings": [
        {
          "type": "range",
          "id": "pos_x",
          "label": "Position X (%)",
          "min": 0,
          "max": 100,
          "step": 1,
          "default": 50
        },
        {
          "type": "range",
          "id": "pos_y",
          "label": "Position Y (%)",
          "min": 0,
          "max": 100,
          "step": 1,
          "default": 50
        },
        {
          "type": "select",
          "id": "text_side",
          "label": "Text position",
          "options": [
            { "value": "left", "label": "Left of image" },
            { "value": "right", "label": "Right of image" }
          ],
          "default": "right"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Diecasted moulds"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text",
          "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Specs Hotspots"
    }
  ]
}

{% endschema %}
