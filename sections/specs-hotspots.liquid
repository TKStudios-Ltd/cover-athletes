{% comment %}
  Map Hotspots Section for Dawn Theme
  Features:
  - Hotspots with dot, angled line, and textbox
  - Textbox locked to left or right edge of 1200px container
  - Line automatically stretches and rotates to meet textbox
  - Angle controlled by schema (with <101 steps rule respected)
{% endcomment %}

<style>
.map-hotspot-section {
  max-width: 1200px;
  margin: 0 auto;
  position: relative;
}

.map-hotspot-section img {
  width: 100%;
  height: auto;
  display: block;
}

.spec-hotspot {
  position: absolute;
  transform: translate(-50%, -50%);
  pointer-events: none;
}

.spec-hotspot__dot {
  width: 14px;
  height: 14px;
  background: #5fd39b;
  border-radius: 50%;
  box-shadow: 0 0 0 6px rgba(95, 211, 155, 0.28);
  position: relative;
  z-index: 2;
}

.spec-hotspot__line {
  position: absolute;
  height: 1px;
  background: #5fd39b;
  transform-origin: left center;
  top: 50%;
  left: 50%;
  z-index: 1;
}

.spec-hotspot__text {
  position: absolute;
  width: 300px;
  max-width: 90vw;
  background: white;
  padding: 1rem;
  font-size: 14px;
  box-shadow: 0 2px 12px rgba(0,0,0,0.08);
  z-index: 3;
}

.spec-hotspot__text.left {
  left: 0;
  transform: translateY(-50%);
  text-align: left;
}

.spec-hotspot__text.right {
  right: 0;
  transform: translateY(-50%);
  text-align: right;
}
</style>

<div class="map-hotspot-section">
  <img src="{{ section.settings.image | image_url }}" alt="Map Background">

  {% for block in section.blocks %}
    {% assign angle = block.settings.angle | times: 1 %}
    {% assign dot_top = block.settings.pos_y | append: '%' %}
    {% assign dot_left = block.settings.pos_x | append: '%' %}

    <div
      class="spec-hotspot"
      style="top: {{ dot_top }}; left: {{ dot_left }};"
    >
      <div class="spec-hotspot__dot"></div>

      {% comment %} Calculate angle, side, and text alignment {% endcomment %}
      {% assign text_side = block.settings.text_side %}
      {% assign direction = angle | times: 1 %}

      <div
        class="spec-hotspot__line"
        style="
          width: 600px;
          transform: rotate({{ angle }}deg);
        "
      ></div>

      <div
        class="spec-hotspot__text {{ text_side }}"
        style="top: calc({{ dot_top }} + (600px * {{ angle | divided_by: 90.0 }}));"
      >
        <strong>{{ block.settings.title }}</strong><br>
        {{ block.settings.text }}
      </div>
    </div>
  {% endfor %}
</div>

{% schema %}
{
  "name": "Map Hotspots",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Map Background Image"
    }
  ],
  "blocks": [
    {
      "type": "hotspot",
      "name": "Hotspot",
      "settings": [
        {
          "type": "range",
          "id": "pos_x",
          "label": "X Position (%)",
          "min": 0,
          "max": 100,
          "step": 1,
          "default": 50
        },
        {
          "type": "range",
          "id": "pos_y",
          "label": "Y Position (%)",
          "min": 0,
          "max": 100,
          "step": 1,
          "default": 50
        },
        {
          "type": "select",
          "id": "text_side",
          "label": "Textbox Side",
          "options": [
            { "value": "left", "label": "Left" },
            { "value": "right", "label": "Right" }
          ],
          "default": "right"
        },
        {
          "type": "range",
          "id": "angle",
          "label": "Line Angle",
          "min": -90,
          "max": 90,
          "step": 2,
          "default": 0
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Hotspot Title"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Description",
          "default": "Hotspot text description."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Map Hotspots",
      "category": "Custom",
      "blocks": [
        {"type": "hotspot"},
        {"type": "hotspot"},
        {"type": "hotspot"}
      ]
    }
  ]
}
{% endschema %}