{
  "name": "Specs Hotspots",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background image"
    },
    {
      "type": "range",
      "id": "image_max_width",
      "label": "Image max width",
      "min": 400,
      "max": 2000,
      "step": 50,
      "unit": "px",
      "default": 1200
    },
    {
    "type": "color_scheme",
    "id": "color_scheme",
    "label": "Color scheme",
    "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top padding",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom padding",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "default": 40
    }
  ],
  "blocks": [
    {
      "type": "hotspot",
      "name": "Hotspot",
      "settings": [
        {
          "type": "range",
          "id": "pos_x",
          "label": "Position X (%)",
          "min": 0,
          "max": 100,
          "step": 1,
          "default": 50
        },
        {
          "type": "range",
          "id": "pos_y",
          "label": "Position Y (%)",
          "min": 0,
          "max": 100,
          "step": 1,
          "default": 50
        },
        {
          "type": "range",
          "id": "angle",
          "label": "Line angle",
          "min": -180,
          "max": 180,
          "step": 5,
          "default": -45
        },
        {
          "type": "range",
          "id": "line_length",
          "label": "Line length",
          "min": 40,
          "max": 800,
          "step": 10,
          "default": 140
        },
        {
          "type": "select",
          "id": "text_side",
          "label": "Text position",
          "options": [
            { "value": "right", "label": "Right" },
            { "value": "left", "label": "Left" }
          ],
          "default": "right"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Diecasted moulds"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text",
          "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Specs Hotspots"
    }
  ]
}
{% endschema %}
