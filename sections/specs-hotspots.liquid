{% stylesheet %}
/* ===============================
   SECTION WRAPPER
=============================== */

.specs-hotspots {
  position: relative;
  width: 100%;
}

.specs-hotspots__inner {
  margin: 0 auto;
}

.specs-hotspots__image-wrapper {
  position: relative;
  margin: 0 auto;
}

.specs-hotspots__image-wrapper img {
  width: 100%;
  display: block;
}

/* ===============================
   HOTSPOT ROOT
=============================== */

.spec-hotspot {
  position: absolute;
  left: var(--x);
  top: var(--y);
  transform: translate(-50%, -50%);
  pointer-events: none;
}

/* ===============================
   DOT
=============================== */

.spec-hotspot__dot {
  position: relative;
  width: 14px;
  height: 14px;
  background: #5fd39b;
  border-radius: 50%;
  box-shadow: 0 0 0 6px rgba(95, 211, 155, 0.28);
  z-index: 3;
}

/* ===============================
   LINE
=============================== */

.spec-hotspot__line {
  position: absolute;
  top: 50%;
  left: 50%;
  width: var(--line-length);
  height: 1px;
  background: #9a9a9a;
  transform-origin: left center;
  z-index: 1;
}

/* ===============================
   CONTENT (ALWAYS FLAT)
=============================== */

.spec-hotspot__content {
  position: absolute;
  top: 50%;
  max-width: 280px;
  transform: translateY(-50%);
}

.spec-hotspot__content h4 {
  margin: 0 0 6px;
  font-size: 14px;
  font-weight: 600;
}

.spec-hotspot__content p {
  margin: 0;
  font-size: 13px;
  line-height: 1.45;
}

/* ===============================
   RIGHT SIDE (TEXT RIGHT)
=============================== */

.spec-hotspot--right .spec-hotspot__line {
  transform: rotate(var(--angle));
}

.spec-hotspot--right .spec-hotspot__content {
  left: calc(var(--line-length) + 48px);
  text-align: left;
}

/* ===============================
   LEFT SIDE (TEXT LEFT)
=============================== */

.spec-hotspot--left .spec-hotspot__line {
  transform: rotate(calc(var(--angle) * -1));
}

.spec-hotspot--left .spec-hotspot__content {
  right: calc(var(--line-length) + 48px);
  text-align: right;
}

/* ===============================
   MOBILE
=============================== */

@media (max-width: 749px) {
  .spec-hotspot {
    display: none;
  }
}

{% endstylesheet %}

<div class="specs-hotspots color-{{ section.settings.color_scheme }}">
  <div
    class="specs-hotspots__inner"
    style="
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    "
  >
    <div
      class="specs-hotspots__image-wrapper"
      style="max-width: {{ section.settings.image_max_width }}px;"
    >
      {% if section.settings.image %}
        {{ section.settings.image | image_url: width: 2400 | image_tag: loading: 'lazy' }}
      {% endif %}

      {% for block in section.blocks %}
        <div
          class="spec-hotspot spec-hotspot--{{ block.settings.text_side }}"
          style="
            --x: {{ block.settings.pos_x }}%;
            --y: {{ block.settings.pos_y }}%;
            --line-length: {{ block.settings.line_length }}px;
            --angle: {{ block.settings.angle }}deg;
          "
          {{ block.shopify_attributes }}
        >
          <span class="spec-hotspot__dot"></span>

          <span class="spec-hotspot__line"></span>

          <div class="spec-hotspot__content">
            <h4>{{ block.settings.title }}</h4>
            <div class="rte">{{ block.settings.text }}</div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Specs Hotspots",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background image"
    },
    {
      "type": "range",
      "id": "image_max_width",
      "label": "Image max width",
      "min": 400,
      "max": 2000,
      "step": 50,
      "unit": "px",
      "default": 1200
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top padding",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom padding",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "default": 40
    }
  ],
  "blocks": [
    {
      "type": "hotspot",
      "name": "Hotspot",
      "settings": [
        {
          "type": "range",
          "id": "pos_x",
          "label": "X position (%)",
          "min": 0,
          "max": 100,
          "step": 1,
          "default": 50
        },
        {
          "type": "range",
          "id": "pos_y",
          "label": "Y position (%)",
          "min": 0,
          "max": 100,
          "step": 1,
          "default": 50
        },
        {
          "type": "select",
          "id": "text_side",
          "label": "Text position",
          "options": [
            { "value": "right", "label": "Right" },
            { "value": "left", "label": "Left" }
          ],
          "default": "right"
        },
        {
          "type": "range",
          "id": "angle",
          "label": "Line angle (0–90)",
          "min": 0,
          "max": 90,
          "step": 5,
          "unit": "°",
          "default": 20
        },
        {
          "type": "range",
          "id": "line_length",
          "label": "Line length",
          "min": 40,
          "max": 600,
          "step": 10,
          "unit": "px",
          "default": 180
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Diecasted moulds"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text",
          "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Suspendisse varius enim."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Specs Hotspots"
    }
  ]
}

{% endschema %}
