{% stylesheet %}
/* =====================================================
   SECTION WRAPPER
===================================================== */

.specs-hotspots {
  position: relative;
  width: 100%;
}

.specs-hotspots__inner {
  margin: 0 auto;
  position: relative;
}

.specs-hotspots__image-wrapper {
  position: relative;
  margin: 0 auto;
}

.specs-hotspots__image-wrapper img,
.specs-hotspots__image-wrapper svg {
  width: 100%;
  height: auto;
  display: block;
}

/* =====================================================
   HOTSPOT ROOT
===================================================== */

.spec-hotspot {
  position: absolute;
  left: var(--x);
  top: var(--y);
  transform: translate(-50%, -50%);
  pointer-events: none;
}

/* =====================================================
   DOT
===================================================== */

.spec-hotspot__dot {
  position: relative;
  width: 14px;
  height: 14px;
  background: #5fd39b;
  border-radius: 50%;
  box-shadow: 0 0 0 6px rgba(95, 211, 155, 0.28);
  z-index: 3;
}

/* =====================================================
   LINE ARM
===================================================== */

.spec-hotspot__arm {
  position: absolute;
  top: 50%;
  left: 50%;
  width: var(--line-length);
  height: 1px;
  background: #9a9a9a;
  transform-origin: left center;
  z-index: 1;
}

/* =====================================================
   CONTENT (ALWAYS ANCHORED TO LINE END)
===================================================== */

.spec-hotspot__content {
  position: absolute;
  top: 50%;
  left: 100%;
  transform: translateY(-50%);
  max-width: 280px;
  font-size: 13px;
  color: rgb(var(--color-foreground));
}

/* =====================================================
   RIGHT SIDE (DEFAULT)
===================================================== */

.spec-hotspot--right .spec-hotspot__arm {
  transform: rotate(var(--angle));
}

.spec-hotspot--right .spec-hotspot__content {
  margin-left: 12px;
  text-align: left;
}

/* =====================================================
   LEFT SIDE (MIRRORED)
===================================================== */

.spec-hotspot--left .spec-hotspot__arm {
  transform: rotate(calc(var(--angle) * -1));
}

.spec-hotspot--left .spec-hotspot__content {
  left: 0;
  transform: translate(-100%, -50%);
  margin-right: 12px;
  text-align: right;
}

/* =====================================================
   TYPOGRAPHY
===================================================== */

.spec-hotspot__content h4 {
  margin: 0 0 6px;
  font-size: 14px;
  font-weight: 600;
  letter-spacing: 0.02em;
}

.spec-hotspot__content p {
  margin: 0;
  font-size: 13px;
  line-height: 1.45;
}

/* =====================================================
   RESPONSIVE
===================================================== */

@media (max-width: 749px) {
  .spec-hotspot {
    display: none;
  }
}


{% endstylesheet %}

<div class="specs-hotspots color-{{ section.settings.color_scheme }}">
  <div
    class="specs-hotspots__inner"
    style="
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    "
  >
    <div
      class="specs-hotspots__image-wrapper"
      style="max-width: {{ section.settings.image_max_width }}px;"
    >
      {% if section.settings.image %}
        {{ section.settings.image | image_url: width: 2400 | image_tag: loading: 'lazy' }}
      {% else %}
        {{ 'image' | placeholder_svg_tag }}
      {% endif %}

      {% for block in section.blocks %}
        <div
        class="spec-hotspot spec-hotspot--{{ block.settings.text_side }}"
        style="
            --x: {{ block.settings.pos_x }}%;
            --y: {{ block.settings.pos_y }}%;
            --angle: {{ block.settings.angle }}deg;
            --line-length: {{ block.settings.line_length }}px;
        "
        {{ block.shopify_attributes }}
        >
        <span class="spec-hotspot__dot"></span>

        <span class="spec-hotspot__arm">
            <span class="spec-hotspot__content">
            <h4>{{ block.settings.title }}</h4>
            <p>{{ block.settings.text }}</p>
            </span>
        </span>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

