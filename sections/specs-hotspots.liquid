{% stylesheet %}
/* ================================
   SECTION WRAPPER
================================ */
.specs-hotspots {
  width: 100%;
}

.specs-hotspots__inner {
  position: relative;
  max-width: 1200px;
  margin: 0 auto;
}

/* ================================
   IMAGE
================================ */
.specs-hotspots__image {
  position: relative;
}

.specs-hotspots__image img {
  display: block;
  width: 100%;
  height: auto;
}

/* ================================
   HOTSPOT ROOT
================================ */
.specs-hotspot {
  position: absolute;
  pointer-events: none;
}

/* DOT */
.specs-hotspot__dot {
  width: 14px;
  height: 14px;
  background: #5fbf92;
  border-radius: 50%;
  position: absolute;
  transform: translate(-50%, -50%);
  z-index: 2;
}

.specs-hotspot__dot::after {
  content: '';
  position: absolute;
  inset: -6px;
  border-radius: 50%;
  border: 1px solid rgba(95, 191, 146, 0.6);
}

/* LINE (JS will set width + rotation) */
.specs-hotspot__line {
  position: absolute;
  top: 50%;
  left: 50%;
  height: 1px;
  background: rgba(0, 0, 0, 0.45);
  transform-origin: left center;
}

/* TEXT BOX */
.specs-hotspot__content {
  position: absolute;
  max-width: 280px;
}

.specs-hotspot__content h4 {
  margin: 0 0 6px;
  font-size: 16px;
  font-weight: 600;
}

.specs-hotspot__content p {
  margin: 0;
  font-size: 14px;
  line-height: 1.5;
  opacity: 0.75;
}

/* MOBILE â€“ hide the desktop hotspots layout */
@media (max-width: 749px) {
  .specs-hotspot {
    display: none;
  }
}
{% endstylesheet %}

<div
  id="SpecsHotspots-{{ section.id }}"
  class="specs-hotspots color-{{ section.settings.color_scheme }}"
>
  <div
    class="specs-hotspots__inner"
    style="
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    "
  >
    <div class="specs-hotspots__image">
      {% if section.settings.image %}
        {{ section.settings.image | image_url: width: 2400 | image_tag: loading: 'lazy' }}
      {% else %}
        {{ 'image' | placeholder_svg_tag }}
      {% endif %}

      {% for block in section.blocks %}
        <div
          class="specs-hotspot specs-hotspot--{{ block.settings.text_side }}"
          style="
            left: {{ block.settings.pos_x }}%;
            top: {{ block.settings.pos_y }}%;
          "
          data-text-side="{{ block.settings.text_side }}"
          data-text-track="{{ block.settings.text_track }}"
          {{ block.shopify_attributes }}
        >
          <span class="specs-hotspot__dot"></span>
          <span class="specs-hotspot__line"></span>
          <div class="specs-hotspot__content">
            {% if block.settings.title != blank %}
              <h4>{{ block.settings.title }}</h4>
            {% endif %}
            {% if block.settings.text != blank %}
              <p>{{ block.settings.text }}</p>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% javascript %}
  document.addEventListener('DOMContentLoaded', () => {
    const root = document.getElementById('SpecsHotspots-{{ section.id }}');
    if (!root) return;

    const imageWrapper = root.querySelector('.specs-hotspots__image');
    if (!imageWrapper) return;

    const hotspots = root.querySelectorAll('.specs-hotspot');
    if (!hotspots.length) return;

    const imageRect = imageWrapper.getBoundingClientRect();

    hotspots.forEach((hotspot) => {
      const dot = hotspot.querySelector('.specs-hotspot__dot');
      const line = hotspot.querySelector('.specs-hotspot__line');
      const content = hotspot.querySelector('.specs-hotspot__content');

      if (!dot || !line || !content) return;

      const side = hotspot.dataset.textSide === 'left' ? 'left' : 'right';
      const track = hotspot.dataset.textTrack || 'middle';

      // Get positions in viewport
      const dotRect = dot.getBoundingClientRect();
      const srcX = dotRect.left + dotRect.width / 2;
      const srcY = dotRect.top + dotRect.height / 2;

      const verticalPadding = 40; // distance from image top/bottom for top/bottom tracks

      let targetY;
      if (track === 'top') {
        targetY = imageRect.top + verticalPadding;
      } else if (track === 'bottom') {
        targetY = imageRect.bottom - verticalPadding;
      } else {
        targetY = imageRect.top + imageRect.height / 2;
      }

      const horizontalOffset = 24; // spacing between image edge and text box

      const targetX =
        side === 'right'
          ? imageRect.right + horizontalOffset
          : imageRect.left - horizontalOffset;

      // Compute line geometry
      const dx = targetX - srcX;
      const dy = targetY - srcY;
      const length = Math.sqrt(dx * dx + dy * dy);
      const angleDeg = (Math.atan2(dy, dx) * 180) / Math.PI;

      // Position and rotate the line: origin at dot, end at text box
      line.style.width = `${length}px`;
      line.style.left = '50%';
      line.style.top = '50%';
      line.style.transform = `translate(-50%, -50%) rotate(${angleDeg}deg)`;

      // Position text box at the target point, staying flat
      const localTargetY = targetY - imageRect.top;

      content.style.top = `${localTargetY}px`;

      if (side === 'right') {
        // anchor to the right of the image
        content.style.left = `${imageRect.width + horizontalOffset}px`;
        content.style.transform = 'translate(-100%, -50%)';
        content.style.textAlign = 'left';
      } else {
        // anchor to the left of the image
        content.style.left = `${-horizontalOffset}px`;
        content.style.transform = 'translate(0, -50%)';
        content.style.textAlign = 'right';
      }
    });
  });
{% endjavascript %}

{% schema %}
{
  "name": "Specs Hotspots",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background image"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top padding",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom padding",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "default": 40
    }
  ],
  "blocks": [
    {
      "type": "hotspot",
      "name": "Hotspot",
      "settings": [
        {
          "type": "range",
          "id": "pos_x",
          "label": "Position X (%)",
          "min": 0,
          "max": 100,
          "step": 1,
          "default": 50
        },
        {
          "type": "range",
          "id": "pos_y",
          "label": "Position Y (%)",
          "min": 0,
          "max": 100,
          "step": 1,
          "default": 50
        },
        {
          "type": "select",
          "id": "text_side",
          "label": "Text side",
          "options": [
            { "value": "left", "label": "Left of image" },
            { "value": "right", "label": "Right of image" }
          ],
          "default": "right"
        },
        {
          "type": "select",
          "id": "text_track",
          "label": "Vertical alignment",
          "options": [
            { "value": "top", "label": "Top" },
            { "value": "middle", "label": "Middle" },
            { "value": "bottom", "label": "Bottom" }
          ],
          "default": "middle"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Diecasted moulds"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text",
          "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Suspendisse varius enim."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Specs Hotspots"
    }
  ]
}
{% endschema %}
