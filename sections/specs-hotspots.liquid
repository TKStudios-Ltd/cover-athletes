{% stylesheet %}
/* ================================
   SECTION
================================ */
.specs-hotspots {
  width: 100%;
}

.specs-hotspots__inner {
  position: relative;
  max-width: 1200px;
  margin: 0 auto;
  padding-top: var(--pt);
  padding-bottom: var(--pb);
}

/* ================================
   IMAGE
================================ */
.specs-hotspots__image {
  position: relative;
}

.specs-hotspots__image img {
  width: 100%;
  display: block;
}

/* ================================
   HOTSPOT ROOT
================================ */
.specs-hotspot {
  position: absolute;
  left: calc(var(--x) * 1%);
  top: calc(var(--y) * 1%);
  pointer-events: none;
}

/* ================================
   DOT
================================ */
.specs-hotspot__dot {
  position: absolute;
  width: 14px;
  height: 14px;
  background: #5fbf92;
  border-radius: 50%;
  transform: translate(-50%, -50%);
  z-index: 3;
}

.specs-hotspot__dot::after {
  content: '';
  position: absolute;
  inset: -6px;
  border: 1px solid rgba(95,191,146,.6);
  border-radius: 50%;
}

/* ================================
   LINE
================================ */
.specs-hotspot__line {
  position: absolute;
  top: 0;
  height: 1px;
  background: rgba(0,0,0,.45);
}

/* ================================
   CONTENT
================================ */
.specs-hotspot__content {
  position: absolute;
  max-width: 280px;
}

.specs-hotspot__content h4 {
  margin: 0 0 6px;
  font-size: 16px;
  font-weight: 600;
}

.specs-hotspot__content p {
  margin: 0;
  font-size: 14px;
  line-height: 1.5;
  opacity: .75;
}

/* ================================
   RIGHT SIDE
================================ */
.specs-hotspot--right .specs-hotspot__line {
  left: 0;
  width: calc(1200px * (1 - var(--x) / 100));
  transform-origin: left center;
  transform: rotate(var(--angle));
}

.specs-hotspot--right .specs-hotspot__content {
  left: calc(1200px - (var(--x) * 12px));
  transform:
    translateY(
      calc(
        tan(var(--angle)) * (1200px * (1 - var(--x) / 100))
      )
      - 50%
    );
  text-align: left;
}

/* ================================
   LEFT SIDE
================================ */
.specs-hotspot--left .specs-hotspot__line {
  right: 0;
  width: calc(1200px * (var(--x) / 100));
  transform-origin: right center;
  transform: rotate(calc(var(--angle) * -1));
}

.specs-hotspot--left .specs-hotspot__content {
  right: calc(var(--x) * 12px);
  transform:
    translateY(
      calc(
        tan(var(--angle)) * (1200px * (var(--x) / 100))
      )
      - 50%
    );
  text-align: right;
}

/* ================================
   MOBILE
================================ */
@media (max-width: 749px) {
  .specs-hotspot {
    display: none;
  }
}
{% endstylesheet %}

<div
  class="specs-hotspots color-{{ section.settings.color_scheme }}"
  style="
    --pt: {{ section.settings.padding_top }}px;
    --pb: {{ section.settings.padding_bottom }}px;
  "
>
  <div class="specs-hotspots__inner">
    <div class="specs-hotspots__image">
      {{ section.settings.image | image_url: width: 2400 | image_tag }}

      {% for block in section.blocks %}
        <div
          class="specs-hotspot specs-hotspot--{{ block.settings.text_side }}"
          style="
            --x: {{ block.settings.pos_x }};
            --y: {{ block.settings.pos_y }};
            --angle: {{ block.settings.angle }}deg;
          "
          {{ block.shopify_attributes }}
        >
          <span class="specs-hotspot__dot"></span>
          <span class="specs-hotspot__line"></span>
          <div class="specs-hotspot__content">
            <h4>{{ block.settings.title }}</h4>
            <p>{{ block.settings.text }}</p>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>


{% schema %}
{
  "name": "Specs Hotspots",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background image"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top padding",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom padding",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "default": 40
    }
  ],
  "blocks": [
    {
      "type": "hotspot",
      "name": "Hotspot",
      "settings": [
        {
          "type": "range",
          "id": "pos_x",
          "label": "Position X (%)",
          "min": 0,
          "max": 100,
          "step": 1,
          "default": 50
        },
        {
          "type": "range",
          "id": "pos_y",
          "label": "Position Y (%)",
          "min": 0,
          "max": 100,
          "step": 1,
          "default": 50
        },
        {
          "type": "select",
          "id": "text_side",
          "label": "Text side",
          "options": [
            { "value": "left", "label": "Left of image" },
            { "value": "right", "label": "Right of image" }
          ],
          "default": "right"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Diecasted moulds"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text",
          "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Specs Hotspots"
    }
  ]
}
{% endschema %}

