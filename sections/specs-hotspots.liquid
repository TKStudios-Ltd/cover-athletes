{% stylesheet %}
/* ================================
   SECTION WRAPPER
================================ */
.specs-hotspots {
  width: 100%;
}

.specs-hotspots__inner {
  position: relative;
  max-width: 1200px;
  margin: 0 auto;
}

/* ================================
   IMAGE
================================ */
.specs-hotspots__image {
  position: relative;
}

.specs-hotspots__image img {
  display: block;
  width: 100%;
  height: auto;
}

/* ================================
   HOTSPOT ROOT
================================ */
.specs-hotspot {
  position: absolute;
  pointer-events: none;
}

/* DOT */
.specs-hotspot__dot {
  width: 14px;
  height: 14px;
  background: #5fbf92;
  border-radius: 50%;
  position: absolute;
  transform: translate(-50%, -50%);
  z-index: 2;
}

.specs-hotspot__dot::after {
  content: '';
  position: absolute;
  inset: -6px;
  border-radius: 50%;
  border: 1px solid rgba(95, 191, 146, 0.6);
}

/* LINE (JS will set width + rotation) */
.specs-hotspot__line {
  position: absolute;
  top: 50%;
  left: 50%;
  height: 1px;
  background: rgba(0, 0, 0, 0.45);
  transform-origin: left center;
}

/* TEXT BOX */
.specs-hotspot__content {
  position: absolute;
  max-width: 280px;
}

.specs-hotspot__content h4 {
  margin: 0 0 6px;
  font-size: 16px;
  font-weight: 600;
}

.specs-hotspot__content p {
  margin: 0;
  font-size: 14px;
  line-height: 1.5;
  opacity: 0.75;
}

/* MOBILE â€“ hide the desktop hotspots layout */
@media (max-width: 749px) {
  .specs-hotspot {
    display: none;
  }
}
{% endstylesheet %}

<div
  id="SpecsHotspots-{{ section.id }}"
  class="specs-hotspots color-{{ section.settings.color_scheme }}"
>
  <div
    class="specs-hotspots__inner"
    style="
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    "
  >
    <div class="specs-hotspots__image">
      {% if section.settings.image %}
        {{ section.settings.image | image_url: width: 2400 | image_tag: loading: 'lazy' }}
      {% else %}
        {{ 'image' | placeholder_svg_tag }}
      {% endif %}

      {% for block in section.blocks %}
        <div
          class="specs-hotspot specs-hotspot--{{ block.settings.text_side }}"
          style="
            left: {{ block.settings.pos_x }}%;
            top: {{ block.settings.pos_y }}%;
          "
          data-text-side="{{ block.settings.text_side }}"
          data-text-track="{{ block.settings.text_track }}"
          {{ block.shopify_attributes }}
        >
          <span class="specs-hotspot__dot"></span>
          <span class="specs-hotspot__line"></span>
          <div class="specs-hotspot__content">
            {% if block.settings.title != blank %}
              <h4>{{ block.settings.title }}</h4>
            {% endif %}
            {% if block.settings.text != blank %}
              <p>{{ block.settings.text }}</p>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', () => {
  const roots = document.querySelectorAll('.specs-hotspots');

  roots.forEach(root => {
    const sectionInner = root.querySelector('.specs-hotspots__inner');
    const imageWrapper = root.querySelector('.specs-hotspots__image');

    if (!sectionInner || !imageWrapper) return;

    const sectionRect = sectionInner.getBoundingClientRect();
    const imageRect = imageWrapper.getBoundingClientRect();

    const hotspots = root.querySelectorAll('.specs-hotspot');

    hotspots.forEach(hotspot => {
      const dot = hotspot.querySelector('.specs-hotspot__dot');
      const line = hotspot.querySelector('.specs-hotspot__line');
      const content = hotspot.querySelector('.specs-hotspot__content');

      if (!dot || !line || !content) return;

      const side =
        hotspot.classList.contains('specs-hotspot--left') ? 'left' : 'right';

      /* -----------------------------------
         DOT POSITION (IMAGE RELATIVE)
      ----------------------------------- */

      const xPercent = Number(hotspot.dataset.x);
      const yPercent = Number(hotspot.dataset.y);

      const dotX =
        imageRect.left + (xPercent / 100) * imageRect.width;
      const dotY =
        imageRect.top + (yPercent / 100) * imageRect.height;

      /* -----------------------------------
         TARGET TEXT EDGE (SECTION BOUND)
      ----------------------------------- */

      const targetX =
        side === 'right'
          ? sectionRect.right
          : sectionRect.left;

      /* -----------------------------------
         VERTICAL OFFSET (ANGLE DRIVER)
      ----------------------------------- */

      const verticalBias =
        Number(hotspot.dataset.vertical || 0);

      const targetY =
        dotY + verticalBias * imageRect.height;

      /* -----------------------------------
         LINE VECTOR
      ----------------------------------- */

      const dx = targetX - dotX;
      const dy = targetY - dotY;

      const length = Math.sqrt(dx * dx + dy * dy);
      const angle = Math.atan2(dy, dx) * (180 / Math.PI);

      /* -----------------------------------
         APPLY LINE
      ----------------------------------- */

      line.style.width = `${length}px`;
      line.style.transformOrigin = 'left center';
      line.style.transform = `rotate(${angle}deg)`;
      line.style.left = '0px';
      line.style.top = '50%';

      /* -----------------------------------
         PLACE CONTENT AT SECTION EDGE
      ----------------------------------- */

      const localY = targetY - sectionRect.top;

      content.style.top = `${localY}px`;

      if (side === 'right') {
        content.style.left = `${sectionRect.width}px`;
        content.style.transform = 'translate(-100%, -50%)';
        content.style.textAlign = 'left';
      } else {
        content.style.left = `0px`;
        content.style.transform = 'translate(0, -50%)';
        content.style.textAlign = 'right';
      }

      /* -----------------------------------
         POSITION HOTSPOT ROOT
      ----------------------------------- */

      hotspot.style.left = `${dotX - sectionRect.left}px`;
      hotspot.style.top = `${dotY - sectionRect.top}px`;

      /* -----------------------------------
         DOT CENTERING
      ----------------------------------- */

      dot.style.left = '0px';
      dot.style.top = '0px';
    });
  });
});
</script>


{% schema %}
{
  "name": "Specs Hotspots",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background image"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top padding",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom padding",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "default": 40
    }
  ],
  "blocks": [
    {
      "type": "hotspot",
      "name": "Hotspot",
      "settings": [
        {
          "type": "range",
          "id": "pos_x",
          "label": "Position X (%)",
          "min": 0,
          "max": 100,
          "step": 1,
          "default": 50
        },
        {
          "type": "range",
          "id": "pos_y",
          "label": "Position Y (%)",
          "min": 0,
          "max": 100,
          "step": 1,
          "default": 50
        },
        {
          "type": "select",
          "id": "text_side",
          "label": "Text side",
          "options": [
            { "value": "left", "label": "Left of image" },
            { "value": "right", "label": "Right of image" }
          ],
          "default": "right"
        },
        {
          "type": "select",
          "id": "text_track",
          "label": "Vertical alignment",
          "options": [
            { "value": "top", "label": "Top" },
            { "value": "middle", "label": "Middle" },
            { "value": "bottom", "label": "Bottom" }
          ],
          "default": "middle"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Diecasted moulds"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text",
          "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Suspendisse varius enim."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Specs Hotspots"
    }
  ]
}
