{% stylesheet %}
/* ===============================
   SECTION WRAPPER
================================ */

.section-map-hotspots {
  position: relative;
  padding: 60px 0;
}

.hotspots-wrapper {
  position: relative;
  max-width: {{ section.settings.max_width }}px;
  margin: 0 auto;
}

/* ===============================
   IMAGE
================================ */

.hotspot-image {
  width: 100%;
  height: auto;
  display: block;
}

/* ===============================
   HOTSPOT CORE
================================ */

.spec-hotspot {
  position: absolute;
  pointer-events: none;
}

/* DOT */

.spec-hotspot__dot {
  width: 14px;
  height: 14px;
  background: #5fd39b;
  border-radius: 50%;
  position: absolute;
  transform: translate(-50%, -50%);
  box-shadow: 0 0 0 6px rgba(95,211,155,.28);
}

/* ===============================
   TEXT BOX
================================ */

.spec-hotspot__content {
  position: absolute;
  width: 280px;
  background: #fff;
  padding: 1rem;
  box-shadow: 0 4px 12px rgba(0,0,0,.08);
}

/* LEFT EDGE */

.spec-hotspot__content.left {
  left: 0;
  text-align: left;
}

/* RIGHT EDGE */

.spec-hotspot__content.right {
  right: 0;
  text-align: left;
}

/* VERTICAL PLACEMENT */

.spec-hotspot__content.top {
  transform: translateY(-100%);
}

.spec-hotspot__content.middle {
  transform: translateY(-50%);
}

.spec-hotspot__content.bottom {
  transform: translateY(0);
}

/* TYPOGRAPHY */

.spec-hotspot__content h4 {
  margin: 0 0 6px;
  font-size: 16px;
  font-weight: 600;
}

.spec-hotspot__content p {
  margin: 0;
  font-size: 14px;
  line-height: 1.5;
  opacity: 0.75;
}

/* MOBILE */

@media (max-width: 749px) {
  .spec-hotspot__content {
    position: static;
    width: auto;
    transform: none;
    margin-top: 1rem;
  }
}
{% endstylesheet %}

<div class="section-map-hotspots color-{{ section.settings.color_scheme }}">
  <div class="hotspots-wrapper">
    {% if section.settings.background_image %}
      <img
        src="{{ section.settings.background_image | img_url: '2400x' }}"
        class="hotspot-image"
        alt=""
      >
    {% endif %}

    {% for block in section.blocks %}
      {% assign x = block.settings.pos_x | append: '%' %}
      {% assign y = block.settings.pos_y | append: '%' %}

      {% assign side = 'right' %}
      {% if block.settings.placement contains 'left' %}
        {% assign side = 'left' %}
      {% endif %}

      {% assign vertical = 'middle' %}
      {% if block.settings.placement contains 'top' %}
        {% assign vertical = 'top' %}
      {% elsif block.settings.placement contains 'bottom' %}
        {% assign vertical = 'bottom' %}
      {% endif %}

      <div
        class="spec-hotspot"
        style="left: {{ x }}; top: {{ y }};"
        {{ block.shopify_attributes }}
      >
        <div class="spec-hotspot__dot"></div>

        <div class="spec-hotspot__content {{ side }} {{ vertical }}">
          <h4>{{ block.settings.title }}</h4>
          <p>{{ block.settings.text }}</p>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Map Hotspots",
  "tag": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image"
    },
    {
      "type": "range",
      "id": "max_width",
      "label": "Max content width",
      "min": 800,
      "max": 1800,
      "step": 100,
      "unit": "px",
      "default": 1200
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    }
  ],
  "blocks": [
    {
      "type": "hotspot",
      "name": "Hotspot",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Hotspot title"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text",
          "default": "Hotspot description"
        },
        {
          "type": "range",
          "id": "pos_x",
          "label": "Horizontal position (%)",
          "min": 0,
          "max": 100,
          "step": 1,
          "default": 50
        },
        {
          "type": "range",
          "id": "pos_y",
          "label": "Vertical position (%)",
          "min": 0,
          "max": 100,
          "step": 1,
          "default": 50
        },
        {
          "type": "select",
          "id": "placement",
          "label": "Textbox placement",
          "options": [
            { "value": "top-left", "label": "Top Left" },
            { "value": "middle-left", "label": "Middle Left" },
            { "value": "bottom-left", "label": "Bottom Left" },
            { "value": "top-right", "label": "Top Right" },
            { "value": "middle-right", "label": "Middle Right" },
            { "value": "bottom-right", "label": "Bottom Right" }
          ],
          "default": "top-right"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Map Hotspots",
      "blocks": [
        { "type": "hotspot" },
        { "type": "hotspot" },
        { "type": "hotspot" }
      ]
    }
  ]
}
{% endschema %}
