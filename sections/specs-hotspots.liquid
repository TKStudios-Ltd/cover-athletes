{% stylesheet %}

/* =====================================================
   SECTION WRAPPER
===================================================== */

.specs-hotspots {
  width: 100%;
}

.specs-hotspots__inner {
  position: relative;
  margin: 0 auto;
}

/* =====================================================
   IMAGE
===================================================== */

.specs-hotspots__image {
  position: relative;
  margin: 0 auto;
}

.specs-hotspots__image img {
  display: block;
  width: 100%;
  height: auto;
}

/* =====================================================
   FIXED TEXT RAILS
===================================================== */

.specs-hotspots__rail {
  position: absolute;
  top: 0;
  bottom: 0;
  width: 320px;
  pointer-events: none;
}

.specs-hotspots__rail--left {
  left: 0;
  text-align: right;
}

.specs-hotspots__rail--right {
  right: 0;
  text-align: left;
}

/* =====================================================
   HOTSPOT DOT
===================================================== */

.specs-hotspot {
  position: absolute;
  transform: translate(-50%, -50%);
  pointer-events: none;
}

.specs-hotspot__dot {
  position: relative;
  width: 14px;
  height: 14px;
  background: #5fbf92;
  border-radius: 50%;
  z-index: 3;
}

.specs-hotspot__dot::after {
  content: '';
  position: absolute;
  inset: -6px;
  border: 1px solid rgba(95, 191, 146, 0.6);
  border-radius: 50%;
}

/* =====================================================
   LINE
===================================================== */

.specs-hotspot__line {
  position: absolute;
  top: 50%;
  height: 1px;
  background: rgba(0, 0, 0, 0.45);
  transform: translateY(-50%);
}

/* RIGHT SIDE */
.specs-hotspot--right .specs-hotspot__line {
  left: 100%;
  width: calc(100% - var(--hotspot-x));
}

/* LEFT SIDE */
.specs-hotspot--left .specs-hotspot__line {
  right: 100%;
  width: var(--hotspot-x);
}

/* =====================================================
   TEXT BLOCKS
===================================================== */

.specs-hotspots__content {
  max-width: 280px;
  margin-bottom: 40px;
}

.specs-hotspots__content h4 {
  margin: 0 0 6px;
  font-size: 16px;
  font-weight: 600;
  line-height: 1.25;
}

.specs-hotspots__content p {
  margin: 0;
  font-size: 14px;
  line-height: 1.5;
  opacity: 0.75;
}

/* =====================================================
   MOBILE
===================================================== */

@media (max-width: 749px) {
  .specs-hotspot,
  .specs-hotspots__rail {
    display: none;
  }
}

{% endstylesheet %}



<div class="specs-hotspots color-{{ section.settings.color_scheme }}">
  <div
    class="specs-hotspots__inner"
    style="
      max-width: {{ section.settings.image_max_width }}px;
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    "
  >

    <!-- LEFT TEXT RAIL -->
    <div class="specs-hotspots__rail specs-hotspots__rail--left">
      {% for block in section.blocks %}
        {% if block.settings.text_side == 'left' %}
          <div class="specs-hotspots__content">
            <h4>{{ block.settings.title }}</h4>
            <p>{{ block.settings.text }}</p>
          </div>
        {% endif %}
      {% endfor %}
    </div>

    <!-- IMAGE + HOTSPOTS -->
    <div class="specs-hotspots__image">
      {% if section.settings.image %}
        {{ section.settings.image | image_url: width: 2400 | image_tag: loading: 'lazy' }}
      {% endif %}

      {% for block in section.blocks %}
        <div
          class="specs-hotspot specs-hotspot--{{ block.settings.text_side }}"
          style="
            left: {{ block.settings.pos_x }}%;
            top: {{ block.settings.pos_y }}%;
            --hotspot-x: {{ block.settings.pos_x }}%;
          "
          {{ block.shopify_attributes }}
        >
          <span class="specs-hotspot__dot"></span>
          <span class="specs-hotspot__line"></span>
        </div>
      {% endfor %}
    </div>

    <!-- RIGHT TEXT RAIL -->
    <div class="specs-hotspots__rail specs-hotspots__rail--right">
      {% for block in section.blocks %}
        {% if block.settings.text_side == 'right' %}
          <div class="specs-hotspots__content">
            <h4>{{ block.settings.title }}</h4>
            <p>{{ block.settings.text }}</p>
          </div>
        {% endif %}
      {% endfor %}
    </div>

  </div>
</div>




