{% stylesheet %}
/* ================================
   SECTION WRAPPER
================================ */
.specs-hotspots {
  width: 100%;
}

.specs-hotspots__inner {
  position: relative;
  margin: 0 auto;
}

/* ================================
   IMAGE
================================ */
.specs-hotspots__image {
  position: relative;
}

.specs-hotspots__image img {
  display: block;
  width: 100%;
  height: auto;
}

/* ================================
   HOTSPOT ROOT
   (full row, dot positioned via --x)
================================ */
.specs-hotspot {
  position: absolute;
  left: 0;
  width: 100%;
  pointer-events: none;
  transform: translateY(-50%);
}

/* Dot sits at X% across the row */
.specs-hotspot__dot {
  width: 14px;
  height: 14px;
  background: #5fbf92;
  border-radius: 50%;
  position: absolute;
  top: 0;
  left: var(--x);
  transform: translate(-50%, -50%);
  z-index: 2;
}

.specs-hotspot__dot::after {
  content: '';
  position: absolute;
  inset: -6px;
  border-radius: 50%;
  border: 1px solid rgba(95, 191, 146, 0.6);
}

/* ================================
   LINE – always horizontal
   JS-free: just stretch to edge
================================ */
.specs-hotspot__line {
  position: absolute;
  top: 0;
  height: 1px;
  background: rgba(0, 0, 0, 0.45);
}

/* Right side: from dot to right edge */
.specs-hotspot--right .specs-hotspot__line {
  left: var(--x);
  right: 0;
}

/* Left side: from left edge to dot */
.specs-hotspot--left .specs-hotspot__line {
  left: 0;
  right: calc(100% - var(--x));
}

/* ================================
   TEXT BOX – locked to edge
================================ */
.specs-hotspot__content {
  position: absolute;
  top: 0;
  max-width: 280px;
}

/* Right edge */
.specs-hotspot--right .specs-hotspot__content {
  right: 0;
  transform: translateY(-50%);
  text-align: left;
}

/* Left edge */
.specs-hotspot--left .specs-hotspot__content {
  left: 0;
  transform: translateY(-50%);
  text-align: right;
}

/* ================================
   TYPOGRAPHY
================================ */
.specs-hotspot__content h4 {
  margin: 0 0 6px;
  font-size: 16px;
  font-weight: 600;
}

.specs-hotspot__content p {
  margin: 0;
  font-size: 14px;
  line-height: 1.5;
  opacity: 0.75;
}

/* ================================
   MOBILE – hide desktop layout
================================ */
@media (max-width: 749px) {
  .specs-hotspot {
    display: none;
  }
}
{% endstylesheet %}

<div
  class="specs-hotspots color-{{ section.settings.color_scheme }}"
>
  <div
    class="specs-hotspots__inner"
    style="
      max-width: {{ section.settings.image_max_width }}px;
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    "
  >
    <div class="specs-hotspots__image">
      {% if section.settings.image %}
        {{ section.settings.image | image_url: width: 2400 | image_tag: loading: 'lazy' }}
      {% else %}
        {{ 'image' | placeholder_svg_tag }}
      {% endif %}

      {% for block in section.blocks %}
        <div
          class="specs-hotspot specs-hotspot--{{ block.settings.text_side }}"
          style="
            top: {{ block.settings.pos_y }}%;
            --x: {{ block.settings.pos_x }}%;
          "
          {{ block.shopify_attributes }}
        >
          <span class="specs-hotspot__dot"></span>
          <span class="specs-hotspot__line"></span>

          <div class="specs-hotspot__content">
            {% if block.settings.title != blank %}
              <h4>{{ block.settings.title }}</h4>
            {% endif %}
            {% if block.settings.text != blank %}
              <p>{{ block.settings.text }}</p>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Specs Hotspots",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background image"
    },
    {
      "type": "range",
      "id": "image_max_width",
      "label": "Section max width",
      "min": 800,
      "max": 1600,
      "step": 50,
      "unit": "px",
      "default": 1200
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top padding",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom padding",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "default": 40
    }
  ],
  "blocks": [
    {
      "type": "hotspot",
      "name": "Hotspot",
      "settings": [
        {
          "type": "range",
          "id": "pos_x",
          "label": "Position X (%)",
          "min": 0,
          "max": 100,
          "step": 1,
          "default": 50
        },
        {
          "type": "range",
          "id": "pos_y",
          "label": "Position Y (%)",
          "min": 0,
          "max": 100,
          "step": 1,
          "default": 50
        },
        {
          "type": "select",
          "id": "text_side",
          "label": "Text position",
          "options": [
            { "value": "left", "label": "Left of image" },
            { "value": "right", "label": "Right of image" }
          ],
          "default": "right"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Diecasted moulds"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text",
          "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Specs Hotspots"
    }
  ]
}
{% endschema %}
