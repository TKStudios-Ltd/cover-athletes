{% stylesheet %}
.specs-hotspots {
  position: relative;
  width: 100%;
}

.specs-hotspots__inner {
  margin: 0 auto;
  position: relative;
}

.specs-hotspots__image {
  position: relative;
  margin: 0 auto;
}

.specs-hotspots__image img {
  width: 100%;
  height: auto;
  display: block;
}

/* HOTSPOT WRAPPER */
.specs-hotspot {
  position: absolute;
  transform: translate(-50%, -50%);
  pointer-events: none;
}

/* DOT */
.specs-hotspot__dot {
  width: 14px;
  height: 14px;
  background: #5fbf92;
  border-radius: 50%;
  position: relative;
  z-index: 2;
}

.specs-hotspot__dot::after {
  content: '';
  position: absolute;
  inset: -6px;
  border: 1px solid rgba(95, 191, 146, 0.6);
  border-radius: 50%;
}

/* ANGLED LINE ONLY */
.specs-hotspot__line {
  position: absolute;
  top: 50%;
  left: 50%;
  width: var(--line-length);
  height: 1px;
  background: rgba(0, 0, 0, 0.45);
  transform-origin: left center;
  transform: translateY(-50%) rotate(var(--angle));
}

/* CONTENT (FLAT) */
.specs-hotspot__content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform:
    translateY(-50%)
    translate(
      calc(cos(var(--angle)) * var(--line-length)),
      calc(sin(var(--angle)) * var(--line-length))
    );
  margin-left: 14px;
  max-width: 280px;
}

.specs-hotspot__content h4 {
  margin: 0 0 6px;
  font-size: 16px;
  font-weight: 600;
  line-height: 1.2;
}

.specs-hotspot__content p {
  margin: 0;
  font-size: 14px;
  line-height: 1.5;
  opacity: 0.75;
}

/* MOBILE SAFETY */
@media screen and (max-width: 749px) {
  .specs-hotspot__content {
    max-width: 220px;
  }
}
{% endstylesheet %}

<div class="specs-hotspots color-{{ section.settings.color_scheme }}">
  <div
    class="specs-hotspots__inner"
    style="
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    "
  >
    <div
      class="specs-hotspots__image"
      style="max-width: {{ section.settings.image_max_width }}px;"
    >
      {% if section.settings.image %}
        {{ section.settings.image | image_url: width: 2400 | image_tag: loading: 'lazy' }}
      {% else %}
        {{ 'image' | placeholder_svg_tag }}
      {% endif %}

      {% for block in section.blocks %}
        <div
            class="spec-hotspot spec-hotspot--{{ block.settings.text_side }}"
            style="
                --x: {{ block.settings.x }}%;
                --y: {{ block.settings.y }}%;
                --angle: {{ block.settings.angle }}deg;
                --line-length: {{ block.settings.line_length }}px;
            "
            {{ block.shopify_attributes }}
            >
            <span class="spec-hotspot__dot"></span>
            <span class="spec-hotspot__line"></span>

            <div class="spec-hotspot__content">
                <h4>{{ block.settings.title }}</h4>
                <div class="rte">{{ block.settings.text }}</div>
            </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

