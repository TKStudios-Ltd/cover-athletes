{% comment %}
  Image Tabs — 50/50 columns, bullets, subheading above & rich text below tabs.
  Left list is static (no swiper). Right column is a vertical image Swiper.
  Requires:
    - assets/swiper-loader.js (exposes window.loadSwiper)
    - assets/image-tabs.js (this component)
{% endcomment %}

{%- liquid
  if section.index == 1
    assign fetch_priority = 'high'
  else
    assign fetch_priority = 'auto'
  endif
-%}

{%- style -%}
  .image-tabs-{{ section.id }} { --gap: 32px; }
  /* Let the theme’s container wrap this section; no extra page-width here */

  /* Grid: 50/50 on desktop */
  .image-tabs-{{ section.id }} .grid {
    display: grid;
    gap: var(--gap);
    grid-template-columns: 1fr;
    align-items: stretch;
  }
  @media (min-width: 990px) {
    .image-tabs-{{ section.id }} .grid {
      grid-template-columns: 1fr 1fr; /* 50/50 */
    }
  }

  /* Headings above tabs */
  .image-tabs-{{ section.id }} .eyebrow {
    margin: 0 0 8px;
    font: inherit;
    opacity: .7;
    letter-spacing: .08em;
    text-transform: uppercase;
  }
  .image-tabs-{{ section.id }} .heading {
    margin: 0 0 12px;
  }
  .image-tabs-{{ section.id }} .lead {
    margin: 0 0 24px;
    max-width: 60ch;
  }

  /* Tabs list */
  .image-tabs-{{ section.id }} [data-role="tabs-list"] {
    border-top: 1px solid rgba(31,25,71,.2);
    border-bottom: 1px solid rgba(31,25,71,.2);
  }
  .image-tabs-{{ section.id }} [data-role="tab-row"] {
    position: relative;
    display: block;
    padding: 14px 0;
    border-bottom: 1px solid rgba(31,25,71,.2);
    cursor: pointer;
  }
  .image-tabs-{{ section.id }} [data-role="tab-row"]:last-child { border-bottom: 0; }

  /* Green pill under text — expands left→right */
  .image-tabs-{{ section.id }} [data-role="tab-row"] .tab-label {
    position: relative;
    display: inline-block;
    font-family: var(--font-heading-family);
    font-weight: 600;
    letter-spacing: 0;
    line-height: 1.05;
    font-size: clamp(28px, 5vw, 44px);
    color: rgb(var(--color-foreground));
    transition: color .25s ease, opacity .25s ease;
  }
  .image-tabs-{{ section.id }} [data-role="tab-row"] .tab-label::before {
    content: "";
    position: absolute; inset: auto 0 0 0;
    height: 28px; border-radius: 999px;
    background: {{ section.settings.pill_color }};
    transform-origin: left center;
    transform: scaleX(0);
    transition: transform .45s cubic-bezier(.22,1,.36,1);
    z-index: -1;
  }
  .image-tabs-{{ section.id }} [data-role="tab-row"].is-active .tab-label::before {
    transform: scaleX(1);
  }
  .image-tabs-{{ section.id }} [data-role="tab-row"].is-active .tab-label {
    color: rgb(var(--color-background)); /* contrast on pill */
  }

  /* Rich text below tabs */
  .image-tabs-{{ section.id }} .tabs-below {
    margin-top: 16px;
    max-width: 60ch;
  }

  /* Image pane: enforce 1:1, show previous image peek with vertical swiper */
  .image-tabs-{{ section.id }} .image-pane {
    position: relative;
    border-radius: 16px;
    overflow: hidden;
  }
  .image-tabs-{{ section.id }} .image-pane .swiper {
    height: auto; /* we control via aspect-ratio on slide inner */
  }
  .image-tabs-{{ section.id }} .image-slide {
    width: 100%;
  }
  .image-tabs-{{ section.id }} .image-slide .aspect {
    width: 100%;
    aspect-ratio: 1 / 1; /* 1:1 constraint */
    overflow: hidden;
    border-radius: 16px;
  }
  .image-tabs-{{ section.id }} .image-slide .media {
    position: relative;
    width: 100%; height: 100%;
  }
  .image-tabs-{{ section.id }} .image-slide img {
    width: 100%; height: 100%;
    object-fit: cover; object-position: center;
    display: block;
  }

  /* Pagination bullets */
  .image-tabs-{{ section.id }} .swiper-pagination {
    position: absolute;
    right: 12px;
    bottom: 12px;
    left: auto;
  }
  .image-tabs-{{ section.id }} .swiper-pagination-bullet {
    opacity: .5;
  }
  .image-tabs-{{ section.id }} .swiper-pagination-bullet-active {
    opacity: 1;
  }

{%- endstyle -%}

<section
  class="image-tabs-{{ section.id }} color-{{ section.settings.section_color_scheme }}"
  data-component="image-tabs"
  data-section-id="{{ section.id }}"
>
  <div class="grid">
    <!-- LEFT: Titles + Tabs -->
    <div>
      {% if section.settings.subheading != blank %}
        <p class="eyebrow">{{ section.settings.subheading }}</p>
      {% endif %}
      {% if section.settings.heading != blank %}
        <h2 class="heading inline-richtext {{ section.settings.heading_size }}">{{ section.settings.heading }}</h2>
      {% endif %}
      {% if section.settings.lead != blank %}
        <div class="lead rte">{{ section.settings.lead }}</div>
      {% endif %}

      <div data-role="tabs-list" aria-label="Tabs">
        {% for block in section.blocks %}
          <div data-role="tab-row" data-index="{{ forloop.index0 }}" {{ block.shopify_attributes }}>
            <span class="tab-label">{{ block.settings.title }}</span>
          </div>
        {% endfor %}
      </div>

      {% if section.settings.below_text != blank %}
        <div class="tabs-below rte">{{ section.settings.below_text }}</div>
      {% endif %}
    </div>

    <!-- RIGHT: Image Swiper -->
    <div>
      <div id="Images-{{ section.id }}"
           class="swiper image-pane"
           data-autoplay="{{ section.settings.autoplay }}"
           data-delay="{{ section.settings.autoplay_delay | times: 1000 }}">
        <div class="swiper-wrapper">
          {% for block in section.blocks %}
            <div class="swiper-slide image-slide">
              <div class="aspect">
                <div class="media">
                  {% if block.settings.image != blank %}
                    {% assign widths = '600, 900, 1200, 1600, 2000' %}
                    {% capture sizes %}(min-width: 990px) 50vw, 100vw{% endcapture %}
                    {{ block.settings.image | image_url: width: 2000 | image_tag: widths: widths, sizes: sizes, fetchpriority: fetch_priority }}
                  {% else %}
                    {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
                  {% endif %}
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
        <div class="swiper-pagination"></div>
      </div>
    </div>
  </div>
</section>

{{ 'image-tabs.js' | asset_url | script_tag }}

{% schema %}
{
  "name": "Image Tabs",
  "class": "section",
  "disabled_on": { "groups": ["header","footer"] },
  "settings": [
    { "type": "text", "id": "subheading", "label": "Subheading" },
    { "type": "inline_richtext", "id": "heading", "label": "Heading", "default": "Section heading" },
    { "type": "select", "id": "heading_size", "label": "Heading size", "default": "h2", "options": [
      { "value": "h2", "label": "H2" },
      { "value": "h1", "label": "H1" },
      { "value": "h0", "label": "H0" }
    ]},
    { "type": "richtext", "id": "lead", "label": "Intro text (above tabs)" },
    { "type": "richtext", "id": "below_text", "label": "Text below tabs" },

    { "type": "checkbox", "id": "autoplay", "label": "Autoplay images", "default": true },
    { "type": "range", "id": "autoplay_delay", "label": "Autoplay delay (seconds)", "min": 2, "max": 15, "step": 1, "default": 5 },

    { "type": "color_scheme", "id": "section_color_scheme", "label": "Section color scheme", "default": "scheme-1" },
    { "type": "color", "id": "pill_color", "label": "Active pill color", "default": "#0FE694" }
  ],
  "blocks": [
    {
      "type": "tab",
      "name": "Tab",
      "settings": [
        { "type": "text", "id": "title", "label": "Tab title", "default": "Tab title" },
        { "type": "image_picker", "id": "image", "label": "Image" }
      ]
    }
  ],
  "presets": [{ "name": "Image Tabs", "blocks": [{ "type": "tab" }, { "type": "tab" }, { "type": "tab" }] }]
}
{% endschema %}
