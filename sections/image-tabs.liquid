{% comment %}
  Image Tabs Section — JS-free version
  Expected to be powered by external swiper initialiser JS.
{% endcomment %}

{% if section.index == 1 %}
  {% assign fetch_priority = "high" %}
{% else %}
  {% assign fetch_priority = "auto" %}
{% endif %}

{%- style -%}
  .image-tabs-{{ section.id }} { --pad-x: 24px; --gap: 32px; --pill: {{ section.settings.pill_color }}; }
  .image-tabs-{{ section.id }} .inner {
    max-width: var(--page-width, 1200px);
    margin-inline: auto;
    padding-inline: var(--pad-x);
  }

  /* Padding */
  .image-tabs-{{ section.id }} .pad {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  /* Grid — always 50/50 on desktop */
  .image-tabs-{{ section.id }} .grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--gap);
  }
  @media (min-width: 990px) {
    .image-tabs-{{ section.id }} .grid {
      grid-template-columns: 1fr 1fr;
    }
  }

  /* Subheading above tabs */
  .image-tabs-{{ section.id }} .subheading {
    font-size: 13px;
    text-transform: uppercase;
    letter-spacing: .12em;
    opacity: .75;
    margin: 0 0 12px;
  }

  /* Description below tabs */
  .image-tabs-{{ section.id }} .desc {
    margin-top: 24px;
  }

  /* Tabs container */
  .image-tabs-{{ section.id }} .tabs {
    border-top: 1px solid rgba(31,25,71,.22);
    border-bottom: 1px solid rgba(31,25,71,.22);
  }
  .image-tabs-{{ section.id }} .tabs .swiper-wrapper {
    display: flex;
    flex-direction: column;
  }

  /* Pill animation on the left */
  .image-tabs-{{ section.id }} .tab {
    display: grid;
    grid-template-columns: 0 1fr;
    column-gap: 16px;
    align-items: center;
    padding: 14px 0;
    border-bottom: 1px solid rgba(31,25,71,.22);
    cursor: pointer;
  }
  .image-tabs-{{ section.id }} .tab:last-child { border-bottom: 0; }

  .image-tabs-{{ section.id }} .pill {
    height: 28px;
    width: 0;
    border-radius: 999px;
    background: var(--pill);
    opacity: .55;
    transition: width .45s cubic-bezier(.19,.72,.27,1), opacity .25s ease;
  }
  .image-tabs-{{ section.id }} .tab.is-active .pill {
    width: 64px;
    opacity: 1;
  }

  .image-tabs-{{ section.id }} .title {
    font-family: var(--font-heading-family);
    font-weight: 600;
    letter-spacing: .02em;
    font-size: clamp(28px, 5vw, 44px);
    line-height: 1.1;
    opacity: .25;
    transition: opacity .2s ease;
  }
  .image-tabs-{{ section.id }} .tab.is-active .title { opacity: 1; }

  /* Image panel: square aspect ratio */
  .image-tabs-{{ section.id }} .image-pane {
    position: relative;
    border-radius: 16px;
    overflow: hidden;
    aspect-ratio: 1 / 1;
  }
  @supports not (aspect-ratio: 1/1) {
    .image-tabs-{{ section.id }} .image-pane::before {
      content: "";
      display: block;
      padding-top: 100%;
    }
    .image-tabs-{{ section.id }} .image-pane > .swiper {
      position: absolute; inset: 0;
    }
  }

  .image-tabs-{{ section.id }} .image-slide .media {
    width: 100%; height: 100%;
  }
  .image-tabs-{{ section.id }} .image-slide img {
    width: 100%; height: 100%;
    object-fit: cover;
    object-position: center;
    display: block;
  }

  /* Pagination dots */
  .image-tabs-{{ section.id }} .image-pagination {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 12px;
    display: flex;
    justify-content: center;
    gap: 8px;
    z-index: 3;
  }
  .image-tabs-{{ section.id }} .image-pagination .swiper-pagination-bullet {
    width: 8px;
    height: 8px;
    background: rgba(255,255,255,.7);
    border-radius: 50%;
  }
  .image-tabs-{{ section.id }} .image-pagination .swiper-pagination-bullet-active {
    background: #fff;
    transform: scale(1.15);
  }

  /* Image text + button */
  .image-tabs-{{ section.id }} .img-text {
    position: absolute; top: 16px; left: 16px; margin: 0; z-index: 2;
    font-size: 14px; color: #fff;
  }
  .image-tabs-{{ section.id }} .img-btn {
    position: absolute; left: 16px; bottom: 16px; z-index: 2;
  }
{%- endstyle -%}

<section
  class="image-tabs-{{ section.id }} color-{{ section.settings.section_color_scheme }}"
  data-component="image-tabs"
  data-section-id="{{ section.id }}"
>
  <div class="inner pad">

    {% if section.settings.heading != blank %}
      <h2 class="inline-richtext {{ section.settings.heading_size }}">{{ section.settings.heading }}</h2>
    {% endif %}

    <div class="grid">

      <!-- LEFT COLUMN -->
      <div>
        {% if section.settings.subheading != blank %}
          <div class="subheading">{{ section.settings.subheading }}</div>
        {% endif %}

        <div
          id="Tabs-{{ section.id }}"
          class="swiper tabs"
          data-autoplay="{{ section.settings.autoplay }}"
          data-delay="{{ section.settings.autoplay_delay | times: 1000 }}"
          data-loop="{{ section.settings.loop }}"
        >
          <div class="swiper-wrapper">
            {% for block in section.blocks %}
              <div class="swiper-slide tab" data-index="{{ forloop.index0 }}">
                <span class="pill"></span>
                <span class="title">{{ block.settings.title }}</span>
              </div>
            {% endfor %}
          </div>
        </div>

        {% if section.settings.description != blank %}
          <div class="desc rte">{{ section.settings.description }}</div>
        {% endif %}
      </div>

      <!-- RIGHT COLUMN -->
      <div>
        <div id="Images-{{ section.id }}" class="swiper image-pane">
          <div class="swiper-wrapper">

            {% for block in section.blocks %}
              <div class="swiper-slide image-slide">
                <div class="media">
                  {% if block.settings.image != blank %}
                    {{ block.settings.image
                      | image_url: width: 2000
                      | image_tag: widths: "600,900,1200,1600,2000", fetchpriority: fetch_priority
                    }}
                  {% endif %}
                </div>

                {% if block.settings.image_text != blank %}
                  <p class="img-text">{{ block.settings.image_text }}</p>
                {% endif %}

                {% if block.settings.button_label != blank %}
                  <a class="button button--primary button--small img-btn"
                     {% if block.settings.button_link %}href="{{ block.settings.button_link }}"{% endif %}
                  >{{ block.settings.button_label }}</a>
                {% endif %}
              </div>
            {% endfor %}

          </div>

          {% if section.settings.show_pagination %}
            <div class="swiper-pagination image-pagination"></div>
          {% endif %}
        </div>
      </div>

    </div>
  </div>
</section>

{% schema %}
{
  "name": "Image Tabs",
  "class": "section",
  "settings": [
    { "type": "inline_richtext", "id": "heading", "label": "Heading" },
    { "type": "select", "id": "heading_size", "label": "Heading size", "default": "h2",
      "options": [
        { "value": "h2", "label": "H2" },
        { "value": "h1", "label": "H1" },
        { "value": "h0", "label": "H0" }
      ]
    },
    { "type": "text", "id": "subheading", "label": "Subheading" },
    { "type": "richtext", "id": "description", "label": "Description below tabs" },
    { "type": "checkbox", "id": "autoplay", "label": "Autoplay", "default": true },
    { "type": "range", "id": "autoplay_delay", "label": "Autoplay delay (seconds)", "min": 2, "max": 15, "step": 1, "default": 5 },
    { "type": "checkbox", "id": "loop", "label": "Loop slides", "default": true },
    { "type": "checkbox", "id": "show_pagination", "label": "Show pagination", "default": true },
    { "type": "color_scheme", "id": "section_color_scheme", "label": "Color scheme", "default": "scheme-1" },
    { "type": "color", "id": "pill_color", "label": "Pill color", "default": "#0FE694" },
    { "type": "range", "id": "padding_top", "label": "Top padding", "min": 0, "max": 120, "step": 4, "default": 40 },
    { "type": "range", "id": "padding_bottom", "label": "Bottom padding", "min": 0, "max": 120, "step": 4, "default": 40 }
  ],
  "blocks": [
    {
      "type": "tab",
      "name": "Tab",
      "settings": [
        { "type": "text", "id": "title", "label": "Title", "default": "Tab heading" },
        { "type": "image_picker", "id": "image", "label": "Image" },
        { "type": "text", "id": "image_text", "label": "Overlay text" },
        { "type": "text", "id": "button_label", "label": "Button label" },
        { "type": "url", "id": "button_link", "label": "Button link" }
      ]
    }
  ],
  "presets": [
    { "name": "Image Tabs", "blocks": [ { "type": "tab" }, { "type": "tab" }, { "type": "tab" } ] }
  ]
}
{% endschema %}
